<script>
    // Use GSAP for smooth animations instead of AOS
    document.addEventListener('DOMContentLoaded', function() {
        // Counter animation for numbers using GSAP
        function animateCountersOnScroll() {
            const counters = document.querySelectorAll('.number-value, .stat-number');
            
            counters.forEach(counter => {
                const text = counter.textContent;
                const target = parseInt(text.replace(/\D/g, ''));
                const hasPlus = text.includes('+');
                const hasPercent = text.includes('%');
                
                if (target > 0) {
                    // Set initial value to 0
                    counter.textContent = '0' + (hasPlus ? '+' : '') + (hasPercent ? '%' : '');
                    
                    gsap.to(counter, {
                        duration: 2,
                        ease: "power2.out",
                        scrollTrigger: {
                            trigger: counter,
                            start: "top 85%",
                            toggleActions: "play none none none",
                            once: true
                        },
                        onUpdate: function() {
                            const current = Math.floor(this.progress() * target);
                            counter.textContent = current + (hasPlus ? '+' : '') + (hasPercent ? '%' : '');
                        },
                        onComplete: function() {
                            counter.textContent = target + (hasPlus ? '+' : '') + (hasPercent ? '%' : '');
                        }
                    });
                }
            });
        }
        
        // Initialize counter animations
        animateCountersOnScroll();
        
        // Animate all cards and elements immediately on load (no scroll delay)
        gsap.set('[data-aos]', { opacity: 1, y: 0, x: 0, scale: 1 });
        
        // Add smooth hover effects only
        const cards = document.querySelectorAll('.milestone-card, .award-item, .number-card, .health-card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', () => {
                gsap.to(card, {
                    duration: 0.3,
                    y: -8,
                    scale: 1.02,
                    boxShadow: "0 20px 40px rgba(0, 0, 0, 0.15)",
                    ease: "power2.out"
                });
            });
            
            card.addEventListener('mouseleave', () => {
                gsap.to(card, {
                    duration: 0.3,
                    y: 0,
                    scale: 1,
                    boxShadow: "0 4px 20px rgba(0, 0, 0, 0.1)",
                    ease: "power2.out"
                });
            });
        });
        
        // Simple fade in for the whole page content
        gsap.fromTo('.main-content', {
            opacity: 0
        }, {
            opacity: 1,
            duration: 0.6,
            ease: "power2.out"
        });
    });
</script>


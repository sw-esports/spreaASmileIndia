<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Admin Dashboard' %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Root CSS Variables - SASI Brand Colors */
        :root {
            --bg-primary: #FFFFFF;
            --bg-secondary: #FFF8F0;
            --color-primary: #F7941D;
            --color-secondary: #ED1C24;
            --color-accent: #EC4F78;
            --text-primary: #333333;
            --text-secondary: #666666;
            --border-color: rgba(229, 231, 235, 0.3);
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            --sidebar-bg: rgba(255, 255, 255, 0.98);
            --card-bg: #ffffff;
            --event-gradient: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        }

        [data-theme="dark"] {
            --bg-primary: #0f0f0f;
            --bg-secondary: #1a1a1a;
            --color-primary: #F7941D;
            --color-secondary: #ED1C24;
            --color-accent: #EC4F78;
            --text-primary: #f5f5f5;
            --text-secondary: #a0a0a0;
            --border-color: #333;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
            --sidebar-bg: #1a1a1a;
            --card-bg: #1a1a1a;
            --event-gradient: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--bg-secondary);
            color: var(--text-primary);
            min-height: 100vh;
        }

        .admin-container {
            display: flex;
            min-height: 100vh;
        }

        /* Theme Toggle Button */
        .theme-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            background: var(--card-bg);
            border: 2px solid var(--border-color);
            border-radius: 50px;
            padding: 8px 16px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            font-weight: 600;
            color: var(--text-primary);
            box-shadow: var(--shadow-md);
            transition: all 0.3s;
        }

        .theme-toggle:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
            background: var(--event-gradient);
            color: white;
            border-color: transparent;
        }

        /* Sidebar */
        .sidebar {
            width: 280px;
            background: var(--sidebar-bg);
            backdrop-filter: blur(20px);
            border-right: 1px solid var(--border-color);
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.05);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 100;
        }

        .sidebar-header {
            padding: 30px 25px;
            border-bottom: 1px solid var(--border-color);
            background: var(--event-gradient);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 12px;
            color: white;
        }

        .sidebar-logo img {
            width: 40px;
            height: 40px;
            object-fit: contain;
        }

        .sidebar-logo .text h2 {
            font-size: 18px;
            font-weight: 700;
            color: white;
        }

        .sidebar-logo .text p {
            font-size: 12px;
            opacity: 0.9;
            color: white;
        }

        .sidebar-user {
            padding: 20px 25px;
            border-bottom: 1px solid var(--border-color);
            background: rgba(247, 148, 29, 0.05);
        }

        .sidebar-user .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .sidebar-user .avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: var(--event-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: white;
            font-weight: 700;
        }

        .sidebar-user .avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

        .sidebar-user .details h3 {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-primary);
        }

        .sidebar-user .details p {
            font-size: 12px;
            color: var(--text-secondary);
        }

        .sidebar-nav {
            padding: 20px 0;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 25px;
            color: var(--text-primary);
            text-decoration: none;
            transition: all 0.3s;
            font-size: 14px;
            font-weight: 500;
        }

        .nav-link:hover,
        .nav-link.active {
            background: linear-gradient(135deg, rgba(247, 148, 29, 0.1), rgba(237, 28, 36, 0.1));
            color: var(--color-primary);
        }

        .nav-link i {
            width: 20px;
            margin-right: 12px;
        }

        .nav-link.submenu {
            padding-left: 50px;
            font-size: 13px;
        }

        /* Folder Navigation */
        .nav-folder {
            margin: 0 12px;
        }

        .nav-folder-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 13px;
            color: var(--text-primary);
            cursor: pointer;
            transition: all 0.3s;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
        }

        .nav-folder-header:hover {
            background: linear-gradient(135deg, rgba(247, 148, 29, 0.1), rgba(237, 28, 36, 0.1));
            color: var(--color-primary);
        }

        .folder-title {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .folder-arrow {
            font-size: 12px;
            transition: transform 0.3s;
        }

        .nav-folder.open .folder-arrow {
            transform: rotate(180deg);
        }

        .nav-folder-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .nav-folder.open .nav-folder-content {
            max-height: 500px;
        }

        /* Main Content */
        .main-content {
            margin-left: 280px;
            padding: 30px;
            flex: 1;
            background: var(--bg-secondary);
            min-height: 100vh;
        }

        .page-header {
            margin-bottom: 40px;
            padding-top: 40px;
        }

        .page-header h1 {
            font-size: 36px;
            font-weight: 800;
            color: var(--text-primary);
            margin-bottom: 8px;
            background: var(--event-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-header p {
            font-size: 16px;
            color: var(--text-secondary);
        }

        /* Stats Cards */
        .stats-section {
            margin-bottom: 40px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
        }

        .stat-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 24px;
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow-sm);
            transition: all 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .stat-card .stat-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 16px;
        }

        .stat-card .stat-label {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-card .stat-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: linear-gradient(135deg, rgba(247, 148, 29, 0.1), rgba(237, 28, 36, 0.1));
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            color: var(--color-primary);
        }

        .stat-card .stat-value {
            font-size: 32px;
            font-weight: 800;
            color: var(--text-primary);
            margin-bottom: 8px;
        }

        .stat-card .stat-description {
            font-size: 13px;
            color: var(--text-secondary);
        }

        /* Quick Actions */
        .quick-actions {
            margin-bottom: 40px;
        }

        .quick-actions h2 {
            font-size: 20px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 20px;
        }

        .action-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .action-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 24px;
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow-sm);
            transition: all 0.3s;
            text-decoration: none;
            display: block;
        }

        .action-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
            border-color: var(--color-primary);
        }

        .action-card .icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            background: var(--event-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
            margin-bottom: 16px;
        }

        .action-card h3 {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 8px;
        }

        .action-card p {
            font-size: 14px;
            color: var(--text-secondary);
            line-height: 1.6;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .theme-toggle {
                top: 10px;
                right: 10px;
                padding: 6px 12px;
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <!-- Theme Toggle Button -->
    <button class="theme-toggle" onclick="toggleTheme()" id="themeToggle">
        <i class="fas fa-moon"></i>
        <span id="themeText">Dark</span>
    </button>

    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <img src="https://ik.imagekit.io/l15cczdgu/Assets/logo.png?updatedAt=1761389196069" alt="SASI Logo">
                    <div class="text">
                        <h2>SASI Admin</h2>
                        <p>Content Management</p>
                    </div>
                </div>
            </div>

            <div class="sidebar-user">
                <div class="user-info">
                    <% if (admin && admin.profilePicture && admin.profilePicture.url) { %>
                        <div class="avatar">
                            <img src="<%= admin.getProfilePictureUrl({ width: 90, quality: 85 }) %>" alt="<%= adminName %>">
                        </div>
                    <% } else { %>
                        <div class="avatar">
                            <%= adminName ? adminName.charAt(0).toUpperCase() : 'A' %>
                        </div>
                    <% } %>
                    <div class="details">
                        <h3><%= adminName || 'Admin' %></h3>
                        <p><%= adminRole || 'Administrator' %></p>
                    </div>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="/admin/dashboard" class="nav-link active">
                    <i class="fas fa-home"></i>
                    Dashboard
                </a>
                
                <div class="nav-folder open">
                    <div class="nav-folder-header" onclick="toggleFolder(this)">
                        <div class="folder-title">
                            <i class="fas fa-folder-open"></i>
                            <span>Programs</span>
                        </div>
                        <i class="fas fa-chevron-down folder-arrow"></i>
                    </div>
                    <div class="nav-folder-content">
                        <a href="/admin/events" class="nav-link submenu">
                            <i class="fas fa-calendar-alt"></i>
                            Events
                        </a>
                        <a href="/admin/education" class="nav-link submenu">
                            <i class="fas fa-graduation-cap"></i>
                            Education
                        </a>
                        <a href="/admin/programs" class="nav-link submenu">
                            <i class="fas fa-th-large"></i>
                            Programs
                        </a>
                    </div>
                </div>

                <a href="/" target="_blank" class="nav-link">
                    <i class="fas fa-globe"></i>
                    View Website
                </a>
                <a href="/admin/logout" class="nav-link" style="color: var(--color-secondary);">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="page-header">
                <h1><i class="fas fa-chart-line"></i> Dashboard</h1>
                <p>Welcome back, <%= adminName || 'Admin' %>! Here's what's happening with your events.</p>
            </div>

            <!-- Stats Section -->
            <section class="stats-section">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-label">Total Events</span>
                            <div class="stat-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                        </div>
                        <div class="stat-value"><%= stats ? stats.total : 0 %></div>
                        <div class="stat-description">All events in the system</div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-label">Published</span>
                            <div class="stat-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                        </div>
                        <div class="stat-value"><%= stats ? stats.published : 0 %></div>
                        <div class="stat-description">Live on website</div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-label">Categories</span>
                            <div class="stat-icon">
                                <i class="fas fa-layer-group"></i>
                            </div>
                        </div>
                        <div class="stat-value"><%= categoryStats ? categoryStats.length : 0 %></div>
                        <div class="stat-description">Active categories</div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-label">Featured</span>
                            <div class="stat-icon">
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                        <div class="stat-value"><%= stats ? stats.featured : 0 %></div>
                        <div class="stat-description">Highlighted events</div>
                    </div>
                </div>
            </section>

            <!-- Quick Actions -->
            <section class="quick-actions">
                <h2><i class="fas fa-bolt"></i> Quick Actions</h2>
                <div class="action-cards">
                    <a href="/admin/events/create" class="action-card">
                        <div class="icon">
                            <i class="fas fa-plus"></i>
                        </div>
                        <h3>Create New Event</h3>
                        <p>Add a new event to your programs catalog</p>
                    </a>

                    <a href="/admin/events" class="action-card">
                        <div class="icon">
                            <i class="fas fa-list"></i>
                        </div>
                        <h3>View All Events</h3>
                        <p>Manage and edit your existing events</p>
                    </a>

                    <a href="/programs/events" target="_blank" class="action-card">
                        <div class="icon">
                            <i class="fas fa-eye"></i>
                        </div>
                        <h3>Preview Public Page</h3>
                        <p>See how events appear to visitors</p>
                    </a>
                </div>
            </section>
        </main>
    </div>

    <script>
        // Theme Toggle Functionality
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('admin-theme', newTheme);
            
            const themeText = document.getElementById('themeText');
            const themeToggle = document.getElementById('themeToggle');
            const icon = themeToggle.querySelector('i');
            
            if (newTheme === 'dark') {
                themeText.textContent = 'Light';
                icon.className = 'fas fa-sun';
            } else {
                themeText.textContent = 'Dark';
                icon.className = 'fas fa-moon';
            }
        }

        // Load saved theme on page load
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('admin-theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
            
            const themeText = document.getElementById('themeText');
            const themeToggle = document.getElementById('themeToggle');
            const icon = themeToggle.querySelector('i');
            
            if (savedTheme === 'dark') {
                themeText.textContent = 'Light';
                icon.className = 'fas fa-sun';
            } else {
                themeText.textContent = 'Dark';
                icon.className = 'fas fa-moon';
            }
        });

        // Folder Toggle
        function toggleFolder(element) {
            const folder = element.parentElement;
            folder.classList.toggle('open');
        }
    </script>
</body>
</html>

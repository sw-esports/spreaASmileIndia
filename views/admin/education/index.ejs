<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Education Programs - Admin Panel</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Root CSS Variables - SASI Brand Colors */
        :root {
            --bg-primary: #FFFFFF;
            --bg-secondary: #FFF8F0;
            --color-primary: #F7941D;
            --color-secondary: #ED1C24;
            --color-accent: #EC4F78;
            --text-primary: #333333;
            --text-secondary: #666666;
            --border-color: rgba(229, 231, 235, 0.3);
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            
            --sidebar-bg: rgba(255, 255, 255, 0.98);
            --card-bg: #ffffff;
            --program-gradient: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        }

        [data-theme="dark"] {
            --bg-primary: #1C1C1C;
            --bg-secondary: #121821;
            --color-primary: #F7941D;
            --color-secondary: #ED1C24;
            --color-accent: #FF7FA2;
            --text-primary: #E6E6E6;
            --text-secondary: #B3B3B3;
            --border-color: rgba(75, 85, 99, 0.3);
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
            
            --sidebar-bg: #1f2937;
            --card-bg: #1f2937;
            --program-gradient: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--bg-secondary);
            color: var(--text-primary);
            min-height: 100vh;
        }

        .admin-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 280px;
            background: var(--sidebar-bg);
            backdrop-filter: blur(20px);
            border-right: 1px solid var(--border-color);
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.05);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 100;
        }

        .sidebar-header {
            padding: 30px 25px;
            border-bottom: 1px solid var(--border-color);
            background: var(--program-gradient);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 12px;
            color: white;
        }

        .sidebar-logo img {
            width: 40px;
            height: 40px;
            object-fit: contain;
        }

        .sidebar-logo .text h2 {
            font-size: 18px;
            font-weight: 700;
            color: white;
        }

        .sidebar-logo .text p {
            font-size: 12px;
            opacity: 0.9;
            color: white;
        }

        .sidebar-nav {
            padding: 20px 0;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 25px;
            color: var(--text-primary);
            text-decoration: none;
            transition: all 0.3s;
            font-size: 14px;
            font-weight: 500;
        }

        .nav-link:hover, .nav-link.active {
            background: linear-gradient(135deg, rgba(247, 148, 29, 0.1), rgba(237, 28, 36, 0.1));
            color: var(--color-primary);
        }

        .nav-link i {
            width: 20px;
            margin-right: 12px;
        }

        .nav-folder {
            margin: 0 12px;
        }

        .nav-folder-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 13px;
            color: var(--text-primary);
            cursor: pointer;
            transition: all 0.3s;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
        }

        .nav-folder-header:hover {
            background: linear-gradient(135deg, rgba(247, 148, 29, 0.1), rgba(237, 28, 36, 0.1));
            color: var(--color-primary);
        }

        .folder-title {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .folder-arrow {
            font-size: 12px;
            transition: transform 0.3s;
        }

        .nav-folder.open .folder-arrow {
            transform: rotate(180deg);
        }

        .nav-folder-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .nav-folder.open .nav-folder-content {
            max-height: 500px;
        }

        .nav-link.submenu {
            padding-left: 50px;
            font-size: 13px;
        }

        /* Theme Toggle Button */
        .theme-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            background: var(--card-bg);
            border: 2px solid var(--border-color);
            border-radius: 50px;
            padding: 8px 16px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            font-family: 'Inter', sans-serif;
            font-weight: 600;
            color: var(--text-primary);
            box-shadow: var(--shadow-md);
            transition: all 0.3s ease;
        }

        .theme-toggle:hover {
            background: var(--color-primary);
            color: white;
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 30px 40px;
        }

        .page-header {
            margin-bottom: 30px;
        }

        .page-header h1 {
            font-size: 32px;
            font-weight: 700;
            color: var(--text-primary);
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 8px;
        }

        .page-header p {
            color: var(--text-secondary);
            font-size: 16px;
        }

        /* Alert */
        .alert {
            padding: 16px 20px;
            border-radius: 12px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-weight: 500;
            animation: slideIn 0.3s ease-out;
        }

        .alert-success {
            background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(34, 197, 94, 0.2));
            color: #16a34a;
            border-left: 4px solid #22c55e;
        }

        .alert-error {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.2));
            color: #dc2626;
            border-left: 4px solid #ef4444;
        }

        /* Actions Bar */
        .actions-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            gap: 20px;
        }

        .search-box {
            flex: 1;
            max-width: 400px;
            position: relative;
        }

        .search-box i {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-secondary);
        }

        .search-box input {
            width: 100%;
            padding: 12px 16px 12px 44px;
            border: 2px solid var(--border-color);
            border-radius: 12px;
            background: var(--card-bg);
            color: var(--text-primary);
            font-size: 14px;
            font-family: 'Inter', sans-serif;
            transition: all 0.3s;
        }

        .search-box input:focus {
            outline: none;
            border-color: var(--color-primary);
            box-shadow: 0 0 0 3px rgba(247, 148, 29, 0.1);
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 12px;
            font-family: 'Inter', sans-serif;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
            text-decoration: none;
        }

        .btn-primary {
            background: var(--program-gradient);
            color: white;
            box-shadow: 0 4px 12px rgba(247, 148, 29, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(247, 148, 29, 0.4);
        }

        /* Category Section */
        .category-section {
            margin-bottom: 40px;
        }

        .category-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 20px;
            padding-bottom: 12px;
            border-bottom: 2px solid var(--border-color);
        }

        .category-header i {
            font-size: 24px;
            color: var(--color-primary);
        }

        .category-header h2 {
            font-size: 24px;
            font-weight: 700;
            color: var(--text-primary);
            flex: 1;
        }

        .category-badge {
            background: var(--program-gradient);
            color: white;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
        }

        /* Programs Grid */
        .programs-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 24px;
        }

        .program-card {
            background: var(--card-bg);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: var(--shadow-md);
            transition: all 0.3s;
            border: 1px solid var(--border-color);
            position: relative;
        }

        .program-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
        }

        .program-image {
            width: 100%;
            height: 200px;
            position: relative;
            overflow: hidden;
        }

        .program-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .program-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.7));
            display: flex;
            align-items: flex-end;
            padding: 20px;
        }

        .program-icon {
            width: 50px;
            height: 50px;
            background: white;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: var(--color-primary);
        }

        .program-edit-btn {
            position: absolute;
            top: 12px;
            right: 12px;
            width: 40px;
            height: 40px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--color-primary);
            text-decoration: none;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            opacity: 0;
            transition: all 0.3s;
            z-index: 10;
        }

        .program-card:hover .program-edit-btn {
            opacity: 1;
        }

        .program-edit-btn:hover {
            background: var(--color-primary);
            color: white;
            transform: scale(1.1);
        }

        .program-content {
            padding: 20px;
        }

        .program-category {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 6px;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 12px;
            background: linear-gradient(135deg, rgba(247, 148, 29, 0.1), rgba(237, 28, 36, 0.1));
            color: var(--color-primary);
        }

        .program-content h3 {
            font-size: 20px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 8px;
        }

        .program-content p {
            font-size: 14px;
            color: var(--text-secondary);
            line-height: 1.6;
            margin-bottom: 16px;
        }

        .program-details {
            display: flex;
            gap: 16px;
            margin-top: 16px;
            padding-top: 16px;
            border-top: 1px solid var(--border-color);
        }

        .detail {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 13px;
            color: var(--text-secondary);
        }

        .detail i {
            color: var(--color-primary);
        }

        .program-features {
            display: flex;
            flex-wrap: wrap;
            gap: 6px;
            margin-top: 12px;
        }

        .feature-tag {
            padding: 4px 10px;
            background: rgba(247, 148, 29, 0.1);
            border-radius: 6px;
            font-size: 11px;
            color: var(--text-secondary);
            font-weight: 500;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: var(--card-bg);
            border-radius: 16px;
            box-shadow: var(--shadow-md);
        }

        .empty-state .icon {
            font-size: 80px;
            color: var(--text-secondary);
            opacity: 0.5;
            margin-bottom: 20px;
        }

        .empty-state h3 {
            font-size: 24px;
            color: var(--text-primary);
            margin-bottom: 12px;
        }

        .empty-state p {
            color: var(--text-secondary);
            margin-bottom: 24px;
        }

        /* Video Styles */
        .has-video .program-image {
            cursor: pointer;
        }

        .video-play-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: all 0.3s;
            pointer-events: none;
        }

        .program-card.has-video .program-image:hover .video-play-overlay {
            opacity: 1;
        }

        .video-play-overlay i {
            font-size: 28px;
            color: var(--color-primary);
            margin-left: 4px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .programs-grid {
                grid-template-columns: 1fr;
            }
            
            .theme-toggle {
                top: 10px;
                right: 10px;
                padding: 6px 12px;
                font-size: 12px;
            }
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <!-- Theme Toggle Button -->
    <button class="theme-toggle" onclick="toggleTheme()" id="themeToggle">
        <i class="fas fa-moon"></i>
        <span id="themeText">Dark</span>
    </button>

    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <img src="https://ik.imagekit.io/l15cczdgu/Assets/logo.png?updatedAt=1761389196069" alt="SASI Logo">
                    <div class="text">
                        <h2>SASI Admin</h2>
                        <p>Content Management</p>
                    </div>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="/admin/dashboard" class="nav-link">
                    <i class="fas fa-home"></i>
                    Dashboard
                </a>
                
                <div class="nav-folder open">
                    <div class="nav-folder-header" onclick="toggleFolder(this)">
                        <div class="folder-title">
                            <i class="fas fa-folder-open"></i>
                            <span>Programs</span>
                        </div>
                        <i class="fas fa-chevron-down folder-arrow"></i>
                    </div>
                    <div class="nav-folder-content">
                        <a href="/admin/events" class="nav-link submenu">
                            <i class="fas fa-calendar-alt"></i>
                            Events
                        </a>
                        <a href="/admin/education" class="nav-link submenu active">
                            <i class="fas fa-graduation-cap"></i>
                            Education
                        </a>
                        <a href="/admin/programs" class="nav-link submenu">
                            <i class="fas fa-th-large"></i>
                            Programs
                        </a>
                    </div>
                </div>

                <a href="/" target="_blank" class="nav-link">
                    <i class="fas fa-globe"></i>
                    View Website
                </a>
                <a href="/admin/logout" class="nav-link" style="color: var(--color-secondary);">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="page-header">
                <h1><i class="fas fa-graduation-cap"></i> All Education Programs</h1>
                <p>Manage and organize all your education programs</p>
            </div>

            <% if (locals.message) { %>
                <div class="alert alert-<%= message.type %>">
                    <i class="fas fa-<%= message.type === 'success' ? 'check-circle' : 'exclamation-circle' %>"></i>
                    <%= message.text %>
                </div>
            <% } %>

            <div class="actions-bar">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" placeholder="Search programs by title, category...">
                </div>
                <a href="/admin/education/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Create New Program
                </a>
            </div>

            <% if (programs && programs.length > 0) { %>
                <%
                // Group programs by category
                const academicPrograms = programs.filter(p => p.category === 'academic');
                const skillPrograms = programs.filter(p => p.category === 'skill');
                %>

                <!-- Academic Programs Section -->
                <% if (academicPrograms && academicPrograms.length > 0) { %>
                    <div class="category-section">
                        <div class="category-header">
                            <i class="fas fa-book"></i>
                            <h2>Academic Programs</h2>
                            <span class="category-badge"><%= academicPrograms.length %> Programs</span>
                        </div>
                        <div class="programs-grid">
                            <% academicPrograms.forEach(program => { %>
                                <%
                                // Apply ImageKit transformations to poster URL
                                let optimizedPosterUrl = program.poster?.url || '';
                                if (optimizedPosterUrl && optimizedPosterUrl.includes('ik.imagekit.io')) {
                                    const parts = optimizedPosterUrl.split('ik.imagekit.io/');
                                    if (parts.length === 2) {
                                        const [baseUrl, pathWithId] = parts;
                                        const pathParts = pathWithId.split('/');
                                        const imageKitId = pathParts[0];
                                        const filePath = '/' + pathParts.slice(1).join('/');
                                        optimizedPosterUrl = `${baseUrl}ik.imagekit.io/${imageKitId}/tr:w-600,q-85,f-webp${filePath}`;
                                    }
                                }

                                const hasVideo = program.video && program.video.url;
                                const videoUrl = hasVideo ? program.video.url : '';
                                const levelIcons = {
                                    'primary': 'fa-child',
                                    'middle': 'fa-graduation-cap',
                                    'high': 'fa-user-graduate'
                                };
                                const iconClass = levelIcons[program.level] || 'fa-book';
                                %>

                                <div class="program-card <%= hasVideo ? 'has-video' : '' %>" 
                                     data-program-id="<%= program._id %>"
                                     <% if (hasVideo) { %>data-video-url="<%= videoUrl %>"<% } %>>
                                    <div class="program-image" <% if (hasVideo) { %>onclick="event.stopPropagation(); playProgramVideo(this)" style="cursor: pointer;"<% } %>>
                                        <% if (optimizedPosterUrl) { %>
                                            <img src="<%= optimizedPosterUrl %>" alt="<%= program.title %>" loading="lazy">
                                        <% } else { %>
                                            <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%); display: flex; align-items: center; justify-content: center;">
                                                <i class="fas <%= iconClass %>" style="font-size: 4rem; color: white; opacity: 0.5;"></i>
                                            </div>
                                        <% } %>
                                        <% if (hasVideo) { %>
                                            <div class="video-play-overlay">
                                                <i class="fas fa-play-circle"></i>
                                            </div>
                                        <% } %>
                                        <div class="program-overlay">
                                            <div class="program-icon">
                                                <i class="fas <%= iconClass %>"></i>
                                            </div>
                                        </div>
                                        <a href="/admin/education/<%= program._id %>/edit" class="program-edit-btn" title="Edit Program">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                    <div class="program-content">
                                        <div class="program-category"><%= program.category %> - <%= program.level %></div>
                                        <h3><%= program.title %></h3>
                                        <p><%= program.description %></p>
                                        
                                        <% if (program.gradeRange) { %>
                                            <div class="program-features">
                                                <span class="feature-tag">Grades: <%= program.gradeRange %></span>
                                            </div>
                                        <% } %>
                                        
                                        <% if (program.subjects && program.subjects.length > 0) { %>
                                            <div class="program-features">
                                                <% program.subjects.slice(0, 4).forEach(subject => { %>
                                                    <span class="feature-tag"><%= subject %></span>
                                                <% }) %>
                                            </div>
                                        <% } %>
                                        
                                        <div class="program-details">
                                            <% if (program.stats && program.stats.students) { %>
                                                <div class="detail">
                                                    <i class="fas fa-users"></i>
                                                    <span><%= program.stats.students %> students</span>
                                                </div>
                                            <% } %>
                                            <% if (program.stats && program.stats.duration) { %>
                                                <div class="detail">
                                                    <i class="fas fa-clock"></i>
                                                    <span><%= program.stats.duration %></span>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% } %>

                <!-- Skill Development Programs Section -->
                <% if (skillPrograms && skillPrograms.length > 0) { %>
                    <div class="category-section">
                        <div class="category-header">
                            <i class="fas fa-tools"></i>
                            <h2>Skill Development Programs</h2>
                            <span class="category-badge"><%= skillPrograms.length %> Programs</span>
                        </div>
                        <div class="programs-grid">
                            <% skillPrograms.forEach(program => { %>
                                <%
                                let optimizedPosterUrl = program.poster?.url || '';
                                if (optimizedPosterUrl && optimizedPosterUrl.includes('ik.imagekit.io')) {
                                    const parts = optimizedPosterUrl.split('ik.imagekit.io/');
                                    if (parts.length === 2) {
                                        const [baseUrl, pathWithId] = parts;
                                        const pathParts = pathWithId.split('/');
                                        const imageKitId = pathParts[0];
                                        const filePath = '/' + pathParts.slice(1).join('/');
                                        optimizedPosterUrl = `${baseUrl}ik.imagekit.io/${imageKitId}/tr:w-600,q-85,f-webp${filePath}`;
                                    }
                                }

                                const hasVideo = program.video && program.video.url;
                                const videoUrl = hasVideo ? program.video.url : '';
                                const levelIcons = {
                                    'tech': 'fa-laptop-code',
                                    'creative': 'fa-palette',
                                    'language': 'fa-language',
                                    'life': 'fa-heart'
                                };
                                const iconClass = levelIcons[program.level] || 'fa-tools';
                                %>

                                <div class="program-card <%= hasVideo ? 'has-video' : '' %>" 
                                     data-program-id="<%= program._id %>"
                                     <% if (hasVideo) { %>data-video-url="<%= videoUrl %>"<% } %>>
                                    <div class="program-image" <% if (hasVideo) { %>onclick="event.stopPropagation(); playProgramVideo(this)" style="cursor: pointer;"<% } %>>
                                        <% if (optimizedPosterUrl) { %>
                                            <img src="<%= optimizedPosterUrl %>" alt="<%= program.title %>" loading="lazy">
                                        <% } else { %>
                                            <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%); display: flex; align-items: center; justify-content: center;">
                                                <i class="fas <%= iconClass %>" style="font-size: 4rem; color: white; opacity: 0.5;"></i>
                                            </div>
                                        <% } %>
                                        <% if (hasVideo) { %>
                                            <div class="video-play-overlay">
                                                <i class="fas fa-play-circle"></i>
                                            </div>
                                        <% } %>
                                        <div class="program-overlay">
                                            <div class="program-icon">
                                                <i class="fas <%= iconClass %>"></i>
                                            </div>
                                        </div>
                                        <a href="/admin/education/<%= program._id %>/edit" class="program-edit-btn" title="Edit Program">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                    <div class="program-content">
                                        <div class="program-category"><%= program.category %> - <%= program.level %></div>
                                        <h3><%= program.title %></h3>
                                        <p><%= program.description %></p>
                                        
                                        <% if (program.modules && program.modules.length > 0) { %>
                                            <div class="program-features">
                                                <% program.modules.slice(0, 4).forEach(module => { %>
                                                    <span class="feature-tag"><%= module %></span>
                                                <% }) %>
                                            </div>
                                        <% } %>
                                        
                                        <div class="program-details">
                                            <% if (program.stats && program.stats.students) { %>
                                                <div class="detail">
                                                    <i class="fas fa-users"></i>
                                                    <span><%= program.stats.students %> students</span>
                                                </div>
                                            <% } %>
                                            <% if (program.stats && program.stats.duration) { %>
                                                <div class="detail">
                                                    <i class="fas fa-clock"></i>
                                                    <span><%= program.stats.duration %></span>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="empty-state">
                    <div class="icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h3>No Programs Yet</h3>
                    <p>Create your first education program to get started</p>
                    <a href="/admin/education/create" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        Create First Program
                    </a>
                </div>
            <% } %>
        </main>
    </div>

    <script>
        // Theme Toggle Functionality
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('admin-theme', newTheme);
            
            const themeText = document.getElementById('themeText');
            const themeToggle = document.getElementById('themeToggle');
            const icon = themeToggle.querySelector('i');
            
            if (newTheme === 'dark') {
                themeText.textContent = 'Light';
                icon.className = 'fas fa-sun';
            } else {
                themeText.textContent = 'Dark';
                icon.className = 'fas fa-moon';
            }
        }

        // Load saved theme on page load
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('admin-theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
            
            const themeText = document.getElementById('themeText');
            const themeToggle = document.getElementById('themeToggle');
            const icon = themeToggle.querySelector('i');
            
            if (savedTheme === 'dark') {
                themeText.textContent = 'Light';
                icon.className = 'fas fa-sun';
            } else {
                themeText.textContent = 'Dark';
                icon.className = 'fas fa-moon';
            }
        });

        // Folder toggle
        function toggleFolder(element) {
            const folder = element.parentElement;
            folder.classList.toggle('open');
        }

        // Search functionality
        document.getElementById('searchInput')?.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const programCards = document.querySelectorAll('.program-card');
            
            programCards.forEach(card => {
                const text = card.textContent.toLowerCase();
                card.style.display = text.includes(searchTerm) ? '' : 'none';
            });
            
            // Hide empty category sections
            document.querySelectorAll('.category-section').forEach(section => {
                const visibleCards = section.querySelectorAll('.program-card:not([style*="display: none"])');
                section.style.display = visibleCards.length > 0 ? '' : 'none';
            });
        });

        // Auto-hide alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.transition = 'all 0.5s ease-out';
                alert.style.opacity = '0';
                alert.style.transform = 'translateY(-10px)';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);

        // Video Modal Functions
        function playProgramVideo(element) {
            const card = element.closest('.program-card');
            const videoUrl = card.getAttribute('data-video-url');
            if (videoUrl) {
                openVideoModal(videoUrl);
            }
        }

        function openVideoModal(videoUrl) {
            const modal = document.getElementById('videoModal');
            const video = document.getElementById('modalVideo');
            const source = video.querySelector('source');
            
            source.src = videoUrl;
            video.load();
            modal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }

        function closeVideoModal() {
            const modal = document.getElementById('videoModal');
            const video = document.getElementById('modalVideo');
            
            video.pause();
            video.currentTime = 0;
            modal.style.display = 'none';
            document.body.style.overflow = '';
        }

        // Close modal on ESC key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeVideoModal();
            }
        });
    </script>

    <!-- Video Modal -->
    <div id="videoModal" class="video-modal" style="display: none;">
        <div class="video-modal-overlay" onclick="closeVideoModal()"></div>
        <div class="video-modal-content">
            <button class="video-close-btn" onclick="closeVideoModal()">
                <i class="fas fa-times"></i>
            </button>
            <video id="modalVideo" controls autoplay style="width: 100%; max-width: 900px; border-radius: 12px;">
                <source src="" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>


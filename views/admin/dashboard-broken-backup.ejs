            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
        }

        .icon-btn.edit {
            background: #bee3f8;
            color: #2c5282;
        }

        .icon-btn.edit:hover {
            background: #90cdf4;
        }

        .icon-btn.delete {
            background: #fed7d7;
            color: #742a2a;
        }

        .icon-btn.delete:hover {
            background: #fc8181;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .empty-state .icon {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.3;
        }

        .empty-state h3 {
            font-size: 24px;
            color: #2d3748;
            margin-bottom: 12px;
        }

        .empty-state p {
            color: #718096;
            margin-bottom: 24px;
        }

        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .main-content {
                margin-left: 0;
            }

            .events-grid {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <img src="../src/images/logo.webp" alt="SASI Logo" class="logo-img">
                    <div class="text">
                        <h2>SASI Admin</h2>
                        <p>Content Management</p>
                    </div>
                </div>
            </div>

            <div class="sidebar-user">
                <div class="user-info">
                    <% if (admin && admin.profilePicture && admin.profilePicture.url) { %>
                        <img src="<%= admin.getProfilePictureUrl({ width: 90, quality: 85 }) %>" alt="<%= adminName %>" class="avatar has-image">
                    <% } else { %>
                        <div class="avatar"><%= (adminName || 'A').charAt(0).toUpperCase() %></div>
                    <% } %>
                    <div class="details">
                        <h3><%= adminName || 'Admin' %></h3>
                        <p><%= adminRole || 'Administrator' %></p>
                    </div>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="/admin/dashboard" class="nav-link active">
                    <i class="fas fa-home"></i>
                    Dashboard
                </a>

                <!-- Programs Folder (Collapsible) -->
                <div class="nav-folder">
                    <div class="nav-folder-header" onclick="toggleFolder(this)">
                        <div class="folder-title">
                            <i class="fas fa-folder"></i>
                            <span>Programs</span>
                        </div>
                        <i class="fas fa-chevron-down folder-arrow"></i>
                    </div>
                    <div class="nav-folder-content">
                        <a href="/admin/events" class="nav-link submenu">
                            <i class="fas fa-calendar-alt"></i>
                            Events
                        </a>
                        <a href="/admin/events/create" class="nav-link submenu">
                            <i class="fas fa-plus"></i>
                            Create New
                        </a>
                        <!-- Future: Health, Food, Education programs -->
                    </div>
                </div>

                <a href="/" target="_blank" class="nav-link">
                    <i class="fas fa-globe"></i>
                    View Website
                </a>

                <a href="/admin/logout" class="nav-link" style="color: #e53e3e; margin-top: auto;">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content-header">
                <h1><i class="fas fa-home"></i> Dashboard</h1>
                <p>Welcome back! Here's your event overview</p>
            </div>

            <!-- Quick Stats -->
            <div class="quick-stats">
                <a href="/admin/events/create" class="stat-card create-btn">
                    <div class="icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <div class="info">
                        <h3>Create New Event</h3>
                        <p>Add a new program event</p>
                    </div>
                </a>

                <div class="stat-card">
                    <div class="icon" style="background: linear-gradient(135deg, #f8a5c2, #fed9b7);">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="info">
                        <h3><%= stats.total || 0 %></h3>
                        <p>Total Events</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="icon" style="background: linear-gradient(135deg, #48bb78, #38a169);">
                        <i class="fas fa-folder-open"></i>
                    </div>
                    <div class="info">
                        <h3><%= categoryStats ? Object.keys(categoryStats).length : 0 %></h3>
                        <p>Categories</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="icon" style="background: linear-gradient(135deg, #4299e1, #3182ce);">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="info">
                        <h3><%= stats.featured || 0 %></h3>
                        <p>Featured Events</p>
                    </div>
                </div>
            </div>

            <div class="content-header" style="margin-top: 40px;">
                <h2><i class="fas fa-clock"></i> Recent Events</h2>
                <p>Latest event posts</p>
            </div>
                    <h3>Featured</h3>
                    <div class="number"><%= stats.featured || 0 %></div>
                </div>
            </div>

            <% if (recentEvents && recentEvents.length > 0) { %>
                <div class="events-grid">
                    <% recentEvents.forEach(event => { %>
                        <div class="event-card">
                            <div class="image-container">
                                <% if (event.poster && event.poster.url) { %>
                                    <img src="<%= event.getPosterUrl({ width: 400, quality: 85 }) %>" alt="<%= event.title %>">
                                <% } else { %>
                                    <div class="placeholder">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                <% } %>
                            </div>
                            <div class="content">
                                <div class="badges">
                                    <span class="badge badge-<%= event.status %>"><%= event.status %></span>
                                    <% if (event.isFeatured) { %>
                                        <span class="badge badge-featured">Featured</span>
                                    <% } %>
                                    <span class="badge badge-category"><%= event.category %></span>
                                </div>
                                <h3><%= event.title %></h3>
                                <p class="description"><%= event.description %></p>
                                <div class="meta">
                                    <span class="date">
                                        <i class="far fa-calendar"></i>
                                        <%= event.eventDate %>
                                    </span>
                                    <div class="actions">
                                        <a href="/admin/events/<%= event._id %>/edit" class="icon-btn edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="icon-btn delete" onclick="deleteEvent('<%= event._id %>')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <div class="icon">
                        <i class="fas fa-calendar-times"></i>
                    </div>
                    <h3>No Events Yet</h3>
                    <p>Create your first event to get started</p>
                    <a href="/admin/events/create" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        Create First Event
                    </a>
                </div>
            <% } %>
        </main>
    </div>

    <script>
        // Theme Toggle Functionality
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('admin-theme', newTheme);
            
            // Update button text and icon
            const themeText = document.getElementById('themeText');
            const themeToggle = document.getElementById('themeToggle');
            const icon = themeToggle.querySelector('i');
            
            if (newTheme === 'dark') {
                themeText.textContent = 'Light';
                icon.className = 'fas fa-sun';
            } else {
                themeText.textContent = 'Dark';
                icon.className = 'fas fa-moon';
            }
        }

        // Load saved theme on page load
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('admin-theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
            
            const themeText = document.getElementById('themeText');
            const themeToggle = document.getElementById('themeToggle');
            const icon = themeToggle.querySelector('i');
            
            if (savedTheme === 'dark') {
                themeText.textContent = 'Light';
                icon.className = 'fas fa-sun';
            } else {
                themeText.textContent = 'Dark';
                icon.className = 'fas fa-moon';
            }
        });

        // Folder Toggle
        function toggleFolder(element) {
            const folder = element.parentElement;
            folder.classList.toggle('open');
        }

        function deleteEvent(eventId) {
            if (confirm('Are you sure you want to delete this event? This action cannot be undone.')) {
                fetch(`/admin/events/${eventId}/delete`, {
                    method: 'POST'
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to delete event');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete event');
                });
            }
        }
    </script>
</body>
</html>
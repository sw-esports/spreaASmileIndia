<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Edit Team Member' %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <%- include('../partials/sidebar', { 
            activePage: 'team',
            showUserInfo: true,
            useLogo: true,
            admin: admin,
            adminName: adminName,
            adminRole: adminRole
        }) %>

        <main class="main-content">
            <div class="page-header">
                <div class="header-content">
                    <h1><i class="fas fa-user-edit"></i> Edit Team Member</h1>
                    <p class="subtitle">Update <%= teamMember.name %>'s information</p>
                </div>
                <a href="/admin/about/team" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Team
                </a>
            </div>

            <div class="content-card">
                <!-- Profile Image Section -->
                <div class="form-section">
                    <h3><i class="fas fa-image"></i> Profile Image</h3>
                    
                    <div class="image-upload-section">
                        <div class="image-preview" id="profileImagePreview">
                            <% if (teamMember.profileImage && teamMember.profileImage.url) { %>
                                <img src="<%= teamMember.getProfileImageUrl() %>" alt="<%= teamMember.name %>">
                            <% } else { %>
                                <div class="placeholder-avatar">
                                    <%= teamMember.name.charAt(0).toUpperCase() %>
                                </div>
                            <% } %>
                        </div>
                        <input type="file" id="profileImageInput" accept="image/*" style="display: none;">
                        <button type="button" class="image-upload-btn" onclick="document.getElementById('profileImageInput').click()">
                            <i class="fas fa-upload"></i> Upload Image
                        </button>
                        <% if (teamMember.profileImage && teamMember.profileImage.fileId) { %>
                        <button type="button" class="image-delete-btn" onclick="deleteImage()">
                            <i class="fas fa-trash"></i> Remove Image
                        </button>
                        <% } %>
                    </div>
                </div>

                <form action="/admin/about/team/<%= teamMember._id %>/edit" method="POST" class="admin-form">
                    <div class="form-section">
                        <h3><i class="fas fa-info-circle"></i> Basic Information</h3>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name">Full Name *</label>
                                <input type="text" id="name" name="name" value="<%= teamMember.name %>" required>
                            </div>

                            <div class="form-group">
                                <label for="role">Role/Position *</label>
                                <input type="text" id="role" name="role" value="<%= teamMember.role %>" required>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="category">Team Category *</label>
                                <select id="category" name="category" required>
                                    <option value="Leadership" <%= teamMember.category === 'Leadership' ? 'selected' : '' %>>Leadership</option>
                                    <option value="Educational Team" <%= teamMember.category === 'Educational Team' ? 'selected' : '' %>>Educational Team</option>
                                    <option value="Support Team" <%= teamMember.category === 'Support Team' ? 'selected' : '' %>>Support Team</option>
                                    <option value="Support Helpers" <%= teamMember.category === 'Support Helpers' ? 'selected' : '' %>>Support Helpers</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="bio">Bio *</label>
                            <textarea id="bio" name="bio" rows="5" required><%= teamMember.bio %></textarea>
                        </div>

                        <div class="form-group">
                            <label for="achievements">Achievements/Tags (one per line)</label>
                            <textarea id="achievements" name="achievements" rows="3" placeholder="TEDx Speaker&#10;20+ Years Experience&#10;Award Winner"><%= teamMember.achievements && teamMember.achievements.length > 0 ? teamMember.achievements.join('\n') : '' %></textarea>
                            <small>These will appear as tags on the team card</small>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" value="<%= teamMember.email || '' %>">
                            </div>

                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="tel" id="phone" name="phone" value="<%= teamMember.phone || '' %>">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="order">Display Order</label>
                                <input type="number" id="order" name="order" value="<%= teamMember.order %>" min="0">
                                <small>Lower numbers appear first</small>
                            </div>

                            <div class="form-group">
                                <label for="joinedDate">Joined Date</label>
                                <input type="date" id="joinedDate" name="joinedDate" value="<%= teamMember.joinedDate ? teamMember.joinedDate.toISOString().split('T')[0] : '' %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="checkbox-group">
                                <input type="checkbox" id="isActive" name="isActive" <%= teamMember.isActive ? 'checked' : '' %>>
                                <label for="isActive">Active (Display on website)</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3><i class="fas fa-share-alt"></i> Social Media Links</h3>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="linkedin"><i class="fab fa-linkedin"></i> LinkedIn</label>
                                <input type="text" id="linkedin" name="linkedin" value="<%= teamMember.socialMedia && teamMember.socialMedia.linkedin ? teamMember.socialMedia.linkedin : '' %>" placeholder="https://linkedin.com/in/username">
                            </div>

                            <div class="form-group">
                                <label for="twitter"><i class="fab fa-twitter"></i> Twitter</label>
                                <input type="text" id="twitter" name="twitter" value="<%= teamMember.socialMedia && teamMember.socialMedia.twitter ? teamMember.socialMedia.twitter : '' %>" placeholder="https://twitter.com/username">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="facebook"><i class="fab fa-facebook"></i> Facebook</label>
                                <input type="text" id="facebook" name="facebook" value="<%= teamMember.socialMedia && teamMember.socialMedia.facebook ? teamMember.socialMedia.facebook : '' %>" placeholder="https://facebook.com/username">
                            </div>

                            <div class="form-group">
                                <label for="instagram"><i class="fab fa-instagram"></i> Instagram</label>
                                <input type="text" id="instagram" name="instagram" value="<%= teamMember.socialMedia && teamMember.socialMedia.instagram ? teamMember.socialMedia.instagram : '' %>" placeholder="https://instagram.com/username">
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn-primary">
                            <i class="fas fa-save"></i> Update Team Member
                        </button>
                        <a href="/admin/about/team" class="btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <style>
        <%- include('../partials/admin-styles') %>

        .image-upload-section {
            display: flex;
            align-items: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .image-preview {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            overflow: hidden;
            border: 4px solid var(--border-color);
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        }

        .image-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .placeholder-avatar {
            font-size: 5rem;
            font-weight: 800;
            color: white;
        }

        .image-upload-btn, .image-delete-btn {
            padding: 12px 24px;
            border-radius: 10px;
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .image-upload-btn {
            background: var(--event-gradient);
            color: white;
        }

        .image-upload-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(247, 148, 29, 0.3);
        }

        .image-delete-btn {
            background: #ef4444;
            color: white;
        }

        .image-delete-btn:hover {
            background: #dc2626;
            transform: translateY(-2px);
        }
    </style>

    <script>
        // Handle profile image upload
        document.getElementById('profileImageInput').addEventListener('change', async function(e) {
            const file = e.target.files[0];
            if (!file) return;

            const formData = new FormData();
            formData.append('image', file);

            try {
                const response = await fetch('/admin/about/team/<%= teamMember._id %>/upload-image', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();

                if (data.success) {
                    // Update preview
                    const preview = document.getElementById('profileImagePreview');
                    preview.innerHTML = `<img src="${data.image.url}" alt="Profile Image">`;
                    
                    alert('Image uploaded successfully!');
                    window.location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error uploading image');
            }
        });

        async function deleteImage() {
            if (!confirm('Are you sure you want to delete this image?')) {
                return;
            }

            try {
                const response = await fetch('/admin/about/team/<%= teamMember._id %>/image', {
                    method: 'DELETE'
                });

                const data = await response.json();

                if (data.success) {
                    alert('Image deleted successfully');
                    window.location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error deleting image');
            }
        }
    </script>
</body>
</html>

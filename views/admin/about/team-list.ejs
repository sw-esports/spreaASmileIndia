<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Team Management' %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="admin-container">
        <%- include('../partials/sidebar', { 
            activePage: 'team',
            showUserInfo: true,
            useLogo: true,
            admin: admin,
            adminName: adminName,
            adminRole: adminRole
        }) %>

        <main class="main-content">
            <div class="page-header">
                <div class="header-content">
                    <h1><i class="fas fa-users"></i> Team Management</h1>
                    <p class="subtitle">Manage your team members</p>
                </div>
                <a href="/admin/about/team/create" class="btn-primary">
                    <i class="fas fa-plus"></i>
                    Add Team Member
                </a>
            </div>

            <div class="content-card">
                <% if (teamMembers && teamMembers.length > 0) { %>
                    <div class="team-grid">
                        <% teamMembers.forEach(member => { %>
                        <div class="team-card">
                            <div class="team-card-image">
                                <% if (member.profileImage && member.profileImage.url) { %>
                                    <img src="<%= member.getProfileImageUrl() %>" alt="<%= member.name %>">
                                <% } else { %>
                                    <div class="placeholder-avatar">
                                        <%= member.name.charAt(0).toUpperCase() %>
                                    </div>
                                <% } %>
                                <% if (!member.isActive) { %>
                                    <span class="inactive-badge">Inactive</span>
                                <% } %>
                            </div>
                            <div class="team-card-content">
                                <h3><%= member.name %></h3>
                                <p class="role"><%= member.role %></p>
                                <p class="bio"><%= member.bio.substring(0, 100) %>...</p>
                                
                                <% if (member.socialMedia && (member.socialMedia.linkedin || member.socialMedia.twitter || member.socialMedia.facebook || member.socialMedia.instagram)) { %>
                                <div class="social-links">
                                    <% if (member.socialMedia.linkedin) { %>
                                        <a href="<%= member.socialMedia.linkedin %>" target="_blank"><i class="fab fa-linkedin"></i></a>
                                    <% } %>
                                    <% if (member.socialMedia.twitter) { %>
                                        <a href="<%= member.socialMedia.twitter %>" target="_blank"><i class="fab fa-twitter"></i></a>
                                    <% } %>
                                    <% if (member.socialMedia.facebook) { %>
                                        <a href="<%= member.socialMedia.facebook %>" target="_blank"><i class="fab fa-facebook"></i></a>
                                    <% } %>
                                    <% if (member.socialMedia.instagram) { %>
                                        <a href="<%= member.socialMedia.instagram %>" target="_blank"><i class="fab fa-instagram"></i></a>
                                    <% } %>
                                </div>
                                <% } %>
                            </div>
                            <div class="team-card-actions">
                                <a href="/admin/about/team/<%= member._id %>/edit" class="btn-edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <button onclick="deleteTeamMember('<%= member._id %>', '<%= member.name %>')" class="btn-delete">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-users"></i>
                        <h3>No Team Members Yet</h3>
                        <p>Start by adding your first team member</p>
                        <a href="/admin/about/team/create" class="btn-primary">
                            <i class="fas fa-plus"></i> Add Team Member
                        </a>
                    </div>
                <% } %>
            </div>
        </main>
    </div>

    <style>
        <%- include('../partials/admin-styles') %>

        .team-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 25px;
            margin-top: 20px;
        }

        .team-card {
            background: var(--card-bg);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: var(--shadow-md);
            transition: all 0.3s ease;
            border: 1px solid var(--border-color);
        }

        .team-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

        .team-card-image {
            position: relative;
            height: 280px;
            background: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .team-card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .placeholder-avatar {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4rem;
            font-weight: 800;
            color: white;
        }

        .inactive-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .team-card-content {
            padding: 25px;
        }

        .team-card-content h3 {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 5px;
        }

        .team-card-content .role {
            color: var(--color-primary);
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 15px;
        }

        .team-card-content .bio {
            color: var(--text-secondary);
            font-size: 0.9rem;
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .social-links {
            display: flex;
            gap: 12px;
            margin-top: 15px;
        }

        .social-links a {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: var(--bg-secondary);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-secondary);
            text-decoration: none;
            transition: all 0.3s ease;
            border: 1px solid var(--border-color);
        }

        .social-links a:hover {
            background: var(--event-gradient);
            color: white;
            transform: translateY(-3px);
        }

        .team-card-actions {
            display: flex;
            gap: 10px;
            padding: 0 25px 25px 25px;
        }

        .btn-edit, .btn-delete {
            flex: 1;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-edit {
            background: var(--event-gradient);
            color: white;
        }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(247, 148, 29, 0.3);
        }

        .btn-delete {
            background: var(--bg-secondary);
            color: var(--text-secondary);
            border: 1px solid var(--border-color);
        }

        .btn-delete:hover {
            background: #ef4444;
            color: white;
            border-color: #ef4444;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
        }

        .empty-state i {
            font-size: 5rem;
            color: var(--color-primary);
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-state h3 {
            font-size: 1.8rem;
            color: var(--text-primary);
            margin-bottom: 10px;
        }

        .empty-state p {
            color: var(--text-secondary);
            margin-bottom: 30px;
        }
    </style>

    <script>
        async function deleteTeamMember(id, name) {
            if (!confirm(`Are you sure you want to delete ${name}?`)) {
                return;
            }

            try {
                const response = await fetch(`/admin/about/team/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    alert('Team member deleted successfully');
                    window.location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error deleting team member');
            }
        }
    </script>
</body>
</html>

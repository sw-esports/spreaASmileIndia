<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Admin Panel</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            /* SASI Brand Colors from style.css */
            --primary-orange: #F7941D;
            --primary-red: #ED1C24;
            --primary-pink: #EC4F78;
            --bg-light: #FFFFFF;
            --bg-secondary-light: #FFF8F0;
            --text-dark: #333333;
            --text-light: #666666;
            --border-light: rgba(229, 231, 235, 0.3);
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        [data-theme="dark"] {
            --bg-light: #1C1C1C;
            --bg-secondary-light: #121821;
            --text-dark: #E6E6E6;
            --text-light: #B3B3B3;
            --border-light: rgba(75, 85, 99, 0.3);
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--bg-light);
            color: var(--text-dark);
            min-height: 100vh;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .admin-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 280px;
            background: var(--bg-light);
            border-right: 1px solid var(--border-light);
            box-shadow: var(--shadow-md);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 100;
            overflow-y: auto;
            transition: background-color 0.3s ease;
        }

        .sidebar-header {
            padding: 30px 25px;
            border-bottom: 1px solid var(--border-light);
            background: linear-gradient(135deg, var(--primary-orange) 0%, var(--primary-red) 100%);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 12px;
            color: white;
        }

        .sidebar-logo .logo-img {
            width: 40px;
            height: 40px;
            object-fit: contain;
        }

        .sidebar-logo .text h2 {
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 2px;
        }

        .sidebar-logo .text p {
            font-size: 12px;
            opacity: 0.9;
            font-weight: 500;
        }

        .sidebar-user {
            padding: 20px 25px;
            border-bottom: 1px solid var(--border-light);
        }

        .sidebar-user .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .sidebar-user .avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-orange), var(--primary-red));
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: white;
            font-weight: 700;
            object-fit: cover;
        }

        .sidebar-user .avatar.has-image {
            background: none;
        }

        .sidebar-user .details h3 {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 3px;
        }

        .sidebar-user .details p {
            font-size: 12px;
            color: var(--text-light);
        }

        .sidebar-nav {
            padding: 20px 0;
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 25px;
            color: var(--text-light);
            text-decoration: none;
            transition: all 0.3s;
            font-size: 14px;
            font-weight: 500;
            border-radius: 8px;
            margin: 0 12px;
        }

        .nav-link:hover, .nav-link.active {
            background: linear-gradient(90deg, rgba(247, 148, 29, 0.1) 0%, transparent 100%);
            color: var(--primary-orange);
        }

        .nav-link i {
            width: 20px;
            margin-right: 12px;
        }

        .nav-link.submenu {
            padding-left: 50px;
            font-size: 13px;
        }

        .nav-folder {
            margin: 0 12px;
        }

        .nav-folder-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 13px;
            color: var(--text-light);
            cursor: pointer;
            transition: all 0.3s;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
        }

        .nav-folder-header:hover {
            background: linear-gradient(90deg, rgba(247, 148, 29, 0.1) 0%, transparent 100%);
            color: var(--primary-orange);
        }

        .folder-title {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .folder-title i {
            width: 20px;
        }

        .folder-arrow {
            font-size: 12px;
            transition: transform 0.3s;
        }

        .nav-folder.open .folder-arrow {
            transform: rotate(180deg);
        }

        .nav-folder-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .nav-folder.open .nav-folder-content {
            max-height: 500px;
        }

        /* Theme Toggle */
        .theme-toggle {
            padding: 12px 25px;
            margin: 20px 12px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: var(--bg-secondary-light);
            border-radius: 8px;
        }

        .theme-toggle span {
            font-size: 14px;
            font-weight: 500;
            color: var(--text-dark);
        }

        .theme-switch {
            position: relative;
            width: 50px;
            height: 26px;
        }

        .theme-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .theme-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #ccc;
            transition: .3s;
            border-radius: 34px;
        }

        .theme-slider:before {
            position: absolute;
            content: "";
            height: 20px;
            width: 20px;
            left: 3px;
            bottom: 3px;
            background: white;
            transition: .3s;
            border-radius: 50%;
        }

        input:checked + .theme-slider {
            background: var(--primary-orange);
        }

        input:checked + .theme-slider:before {
            transform: translateX(24px);
        }

        /* Main Content */
        .main-content {
            margin-left: 280px;
            padding: 30px;
            flex: 1;
            position: relative;
            z-index: 10;
        }

        .content-header {
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .content-header h1 {
            font-size: 32px;
            font-weight: 700;
            color: var(--text-dark);
        }

        .content-header p {
            color: var(--text-light);
            font-size: 15px;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-orange) 0%, var(--primary-red) 100%);
            color: white;
            box-shadow: var(--shadow-md);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        /* Quick Stats */
        .quick-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: var(--bg-light);
            padding: 24px;
            border-radius: 16px;
            border: 1px solid var(--border-light);
            box-shadow: var(--shadow-md);
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
        }

        .stat-card .icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
            flex-shrink: 0;
        }

        .stat-card.create-btn {
            background: linear-gradient(135deg, var(--primary-orange) 0%, var(--primary-red) 100%);
            color: white;
            cursor: pointer;
            text-decoration: none;
        }

        .stat-card.create-btn .icon {
            background: rgba(255, 255, 255, 0.3);
        }

        .stat-card .info h3 {
            font-size: 24px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 4px;
        }

        .stat-card.create-btn .info h3 {
            color: white;
            font-size: 18px;
        }

        .stat-card .info p {
            font-size: 13px;
            color: var(--text-light);
        }

        .stat-card.create-btn .info p {
            color: rgba(255, 255, 255, 0.9);
        }

        /* Events Grid - Matching Frontend Card Style */
        .events-section {
            margin-top: 40px;
        }

        .section-header {
            margin-bottom: 30px;
        }

        .section-header h2 {
            font-size: 28px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 8px;
        }

        .section-header p {
            color: var(--text-light);
            font-size: 15px;
        }

        .events-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 24px;
        }

        .event-card {
            background: var(--bg-light);
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid var(--border-light);
            box-shadow: var(--shadow-md);
            transition: all 0.3s;
        }

        .event-card:hover {
            transform: translateY(-6px);
            box-shadow: var(--shadow-lg);
        }

        .event-card .event-image {
            width: 100%;
            height: 200px;
            overflow: hidden;
            background: linear-gradient(135deg, var(--primary-orange) 0%, var(--primary-red) 100%);
            position: relative;
        }

        .event-card .event-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }

        .event-card:hover .event-image img {
            transform: scale(1.05);
        }

        .event-card .placeholder {
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 48px;
            color: white;
        }

        .event-card .event-content {
            padding: 20px;
        }

        .event-card .badges {
            display: flex;
            gap: 8px;
            margin-bottom: 12px;
            flex-wrap: wrap;
        }

        .badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 11px;
            font-weight: 600;
            text-transform: capitalize;
            letter-spacing: 0.5px;
        }

        .badge-published {
            background: #c6f6d5;
            color: #22543d;
        }

        .badge-draft {
            background: #fed7d7;
            color: #742a2a;
        }

        .badge-featured {
            background: #bee3f8;
            color: #2c5282;
        }

        .badge-category {
            background: #fef5e7;
            color: #975a16;
        }

        .event-card h3 {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 8px;
            line-height: 1.4;
        }

        .event-card .description {
            font-size: 14px;
            color: var(--text-light);
            line-height: 1.6;
            margin-bottom: 16px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .event-card .meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 16px;
            border-top: 1px solid var(--border-light);
        }

        .event-card .date {
            font-size: 12px;
            color: var(--text-light);
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .event-card .actions {
            display: flex;
            gap: 8px;
        }

        .icon-btn {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
        }

        .icon-btn.edit {
            background: #bee3f8;
            color: #2c5282;
        }

        .icon-btn.edit:hover {
            background: #90cdf4;
        }

        .icon-btn.delete {
            background: #fed7d7;
            color: #742a2a;
        }

        .icon-btn.delete:hover {
            background: #fc8181;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: var(--bg-light);
            border-radius: 16px;
            border: 1px solid var(--border-light);
        }

        .empty-state .icon {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.3;
            color: var(--text-light);
        }

        .empty-state h3 {
            font-size: 24px;
            color: var(--text-dark);
            margin-bottom: 12px;
        }

        .empty-state p {
            color: var(--text-light);
            margin-bottom: 24px;
        }

        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .main-content {
                margin-left: 0;
            }

            .events-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <img src="../src/images/logo.webp" alt="SASI Logo" class="logo-img">
                    <div class="text">
                        <h2>SASI Admin</h2>
                        <p>Content Management</p>
                    </div>
                </div>
            </div>

            <div class="sidebar-user">
                <div class="user-info">
                    <% if (admin && admin.profilePicture && admin.profilePicture.url) { %>
                        <img src="<%= admin.getProfilePictureUrl({ width: 90, quality: 85 }) %>" alt="<%= adminName %>" class="avatar has-image">
                    <% } else { %>
                        <div class="avatar"><%= (adminName || 'A').charAt(0).toUpperCase() %></div>
                    <% } %>
                    <div class="details">
                        <h3><%= adminName || 'Admin' %></h3>
                        <p><%= adminRole || 'Administrator' %></p>
                    </div>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="/admin/dashboard" class="nav-link active">
                    <i class="fas fa-home"></i>
                    Dashboard
                </a>

                <!-- Programs Folder (Collapsible) -->
                <div class="nav-folder open">
                    <div class="nav-folder-header" onclick="toggleFolder(this)">
                        <div class="folder-title">
                            <i class="fas fa-folder"></i>
                            <span>Programs</span>
                        </div>
                        <i class="fas fa-chevron-down folder-arrow"></i>
                    </div>
                    <div class="nav-folder-content">
                        <a href="/admin/events" class="nav-link submenu">
                            <i class="fas fa-calendar-alt"></i>
                            Events
                        </a>
                        <a href="/admin/events/create" class="nav-link submenu">
                            <i class="fas fa-plus"></i>
                            Create New
                        </a>
                    </div>
                </div>

                <a href="/" target="_blank" class="nav-link">
                    <i class="fas fa-globe"></i>
                    View Website
                </a>
            </nav>

            <!-- Theme Toggle -->
            <div class="theme-toggle">
                <span><i class="fas fa-moon"></i> Dark Mode</span>
                <label class="theme-switch">
                    <input type="checkbox" id="themeToggle">
                    <span class="theme-slider"></span>
                </label>
            </div>

            <a href="/admin/logout" class="nav-link" style="color: var(--primary-red); margin-top: auto;">
                <i class="fas fa-sign-out-alt"></i>
                Logout
            </a>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content-header">
                <div>
                    <h1><i class="fas fa-home"></i> Dashboard</h1>
                    <p>Welcome back, <%= adminName || 'Admin' %>! Here's your event overview</p>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="quick-stats">
                <a href="/admin/events/create" class="stat-card create-btn">
                    <div class="icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <div class="info">
                        <h3>Create New Event</h3>
                        <p>Add a new program event</p>
                    </div>
                </a>

                <div class="stat-card">
                    <div class="icon" style="background: linear-gradient(135deg, var(--primary-orange), var(--primary-red));">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="info">
                        <h3><%= stats.total || 0 %></h3>
                        <p>Total Events</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="icon" style="background: linear-gradient(135deg, #48bb78, #38a169);">
                        <i class="fas fa-folder-open"></i>
                    </div>
                    <div class="info">
                        <h3><%= categoryStats ? Object.keys(categoryStats).length : 0 %></h3>
                        <p>Categories</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="icon" style="background: linear-gradient(135deg, #4299e1, #3182ce);">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="info">
                        <h3><%= stats.featured || 0 %></h3>
                        <p>Featured Events</p>
                    </div>
                </div>
            </div>

            <!-- Recent Events Section -->
            <div class="events-section">
                <div class="section-header">
                    <h2><i class="fas fa-clock"></i> Recent Events</h2>
                    <p>Latest event posts</p>
                </div>

                <% if (recentEvents && recentEvents.length > 0) { %>
                    <div class="events-grid">
                        <% recentEvents.forEach(event => { %>
                            <div class="event-card">
                                <div class="event-image">
                                    <% if (event.poster && event.poster.url) { %>
                                        <img src="<%= event.poster.url %>" alt="<%= event.title %>">
                                    <% } else { %>
                                        <div class="placeholder">
                                            <i class="fas fa-calendar-alt"></i>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="event-content">
                                    <div class="badges">
                                        <span class="badge badge-<%= event.status %>"><%= event.status %></span>
                                        <% if (event.isFeatured) { %>
                                            <span class="badge badge-featured">Featured</span>
                                        <% } %>
                                        <span class="badge badge-category"><%= event.category %></span>
                                    </div>
                                    <h3><%= event.title %></h3>
                                    <p class="description"><%= event.description %></p>
                                    <div class="meta">
                                        <span class="date">
                                            <i class="far fa-calendar"></i>
                                            <%= event.eventDate %>
                                        </span>
                                        <div class="actions">
                                            <a href="/admin/events/<%= event._id %>/edit" class="icon-btn edit" title="Edit Event">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="icon-btn delete" onclick="deleteEvent('<%= event._id %>')" title="Delete Event">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <div class="icon">
                            <i class="fas fa-calendar-times"></i>
                        </div>
                        <h3>No Events Yet</h3>
                        <p>Create your first event to get started</p>
                        <a href="/admin/events/create" class="btn btn-primary">
                            <i class="fas fa-plus"></i>
                            Create First Event
                        </a>
                    </div>
                <% } %>
            </div>
        </main>
    </div>

    <script>
        function toggleFolder(element) {
            const folder = element.parentElement;
            folder.classList.toggle('open');
        }

        function deleteEvent(eventId) {
            if (confirm('Are you sure you want to delete this event? This action cannot be undone.')) {
                fetch(`/admin/events/${eventId}/delete`, {
                    method: 'POST'
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to delete event');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete event');
                });
            }
        }

        // Theme Toggle
        const themeToggle = document.getElementById('themeToggle');
        const htmlElement = document.documentElement;

        // Load saved theme
        const savedTheme = localStorage.getItem('adminTheme') || 'light';
        if (savedTheme === 'dark') {
            htmlElement.setAttribute('data-theme', 'dark');
            themeToggle.checked = true;
        }

        themeToggle.addEventListener('change', function() {
            if (this.checked) {
                htmlElement.setAttribute('data-theme', 'dark');
                localStorage.setItem('adminTheme', 'dark');
            } else {
                htmlElement.removeAttribute('data-theme');
                localStorage.setItem('adminTheme', 'light');
            }
        });
    </script>
</body>
</html>

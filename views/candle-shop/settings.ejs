    <meta name="description" content="<%= metaDescription %>">
    <meta name="keywords" content="settings, preferences, SASI candles">
    <meta name="author" content="Spread A Smile India">
    <meta name="robots" content="noindex, nofollow">
    
    <!-- Favicons -->

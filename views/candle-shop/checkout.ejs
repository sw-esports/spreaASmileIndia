    <!-- Checkout specific styles -->
    <style>
        .checkout-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            display: grid;
            grid-template-columns: 1fr 400px;
            gap: 3rem;
            min-height: calc(100vh - 200px);
        }
        
        .checkout-form {
            background: var(--shop-bg-primary);
            padding: 2rem;
            border-radius: var(--shop-radius-lg);
            border: 1px solid var(--shop-border);
            height: fit-content;
        }
        
        .order-summary {
            background: var(--shop-bg-secondary);
            padding: 2rem;
            border-radius: var(--shop-radius-lg);
            border: 1px solid var(--shop-border);
            height: fit-content;
            position: sticky;
            top: 2rem;
        }
        
        .form-section {
            margin-bottom: 2rem;
        }
        
        .form-section h3 {
            color: var(--shop-primary);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .form-group {
            margin-bottom: 1rem;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--shop-text-primary);
        }
        
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid var(--shop-border);
            border-radius: var(--shop-radius-md);
            background: var(--shop-bg-primary);
            color: var(--shop-text-primary);
            font-size: 1rem;
            transition: var(--shop-transition);
        }
        
        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--shop-primary);
            box-shadow: 0 0 0 3px var(--shop-primary-alpha);
        }
        
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }
        
        .payment-methods {
            display: grid;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        
        .payment-method {
            padding: 1rem;
            border: 2px solid var(--shop-border);
            border-radius: var(--shop-radius-md);
            cursor: pointer;
            transition: var(--shop-transition);
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        
        .payment-method:hover {
            border-color: var(--shop-primary);
        }
        
        .payment-method.active {
            border-color: var(--shop-primary);
            background: var(--shop-primary-light);
        }
        
        .payment-method input[type="radio"] {
            width: auto;
        }
        
        .order-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem 0;
            border-bottom: 1px solid var(--shop-border);
        }
        
        .order-item:last-child {
            border-bottom: none;
        }
        
        .item-image {
            width: 60px;
            height: 60px;
            border-radius: var(--shop-radius-md);
            overflow: hidden;
        }
        
        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .item-details {
            flex: 1;
        }
        
        .item-name {
            font-weight: 600;
            color: var(--shop-text-primary);
            margin-bottom: 0.25rem;
        }
        
        .item-price {
            color: var(--shop-text-secondary);
            font-size: 0.9rem;
        }
        
        .order-totals {
            border-top: 2px solid var(--shop-border);
            padding-top: 1rem;
            margin-top: 1rem;
        }
        
        .total-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }
        
        .total-row.final {
            font-weight: 700;
            font-size: 1.1rem;
            color: var(--shop-primary);
            padding-top: 0.5rem;
            border-top: 1px solid var(--shop-border);
        }
        
        .place-order-btn {
            width: 100%;
            padding: 1rem;
            background: var(--shop-primary);
            color: white;
            border: none;
            border-radius: var(--shop-radius-md);
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--shop-transition);
            margin-top: 1rem;
        }
        
        .place-order-btn:hover {
            background: var(--shop-primary-dark);
            transform: translateY(-2px);
        }
        
        .security-info {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 1rem;
            padding: 1rem;
            background: var(--shop-success-light);
            border-radius: var(--shop-radius-md);
            font-size: 0.9rem;
            color: var(--shop-success);
        }
        
        .donation-section {
            background: var(--shop-primary-light);
            padding: 1.5rem;
            border-radius: var(--shop-radius-md);
            margin-bottom: 2rem;
        }
        
        .donation-section h4 {
            color: var(--shop-primary);
            margin-bottom: 1rem;
        }
        
        .donation-options {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 0.5rem;
            margin-bottom: 1rem;
        }
        
        .donation-option {
            padding: 0.5rem;
            border: 1px solid var(--shop-primary);
            border-radius: var(--shop-radius-sm);
            text-align: center;
            cursor: pointer;
            transition: var(--shop-transition);
            background: white;
            color: var(--shop-primary);
        }
        
        .donation-option:hover,
        .donation-option.active {
            background: var(--shop-primary);
            color: white;
        }
        
        .breadcrumb {
            background: var(--shop-bg-secondary);
            padding: 1rem 2rem;
            margin-bottom: 2rem;
        }
        
        .breadcrumb-list {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            list-style: none;
            margin: 0;
            padding: 0;
        }
        
        .breadcrumb-item {
            color: var(--shop-text-secondary);
        }
        
        .breadcrumb-item.active {
            color: var(--shop-primary);
            font-weight: 600;
        }
        
        .breadcrumb-item:not(:last-child)::after {
            content: '>';
            margin-left: 0.5rem;
            color: var(--shop-text-secondary);
        }
        
        @media (max-width: 768px) {
            .checkout-container {
                grid-template-columns: 1fr;
                gap: 2rem;
                padding: 1rem;
            }
            
            .order-summary {
                position: static;
                order: -1;
            }
            
            .form-row {
                grid-template-columns: 1fr;
            }
            
            .donation-options {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>

                        <div class="order-actions">
                            <button class="btn btn-outline" onclick="viewOrderDetails('ORD-2024-002')">
                                <i class="fas fa-eye"></i>
                                View Details
                            </button>
                            <button class="btn btn-outline" onclick="trackOrder('ORD-2024-002')">
                                <i class="fas fa-map-marker-alt"></i>
                                Track Order

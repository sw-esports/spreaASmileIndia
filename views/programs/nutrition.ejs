            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // Add interactive effects to cards
    const cards = document.querySelectorAll('.meal-card-modern, .fruit-card, .detail-card');
    cards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-10px) scale(1.02)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
        });
    });

    // Animate metric numbers on scroll
    const observerOptions = {
        threshold: 0.5,
        triggerOnce: true
    };

    const metricNumbers = document.querySelectorAll('.metric-number, .stat-number');
    const numberObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const number = entry.target;
                const finalValue = number.textContent;
                number.textContent = '0';
                
                // Simple number animation
                let current = 0;
                const increment = finalValue.includes('%') ? 2 : 10;
                const interval = setInterval(() => {
                    current += increment;
                    if (current >= parseInt(finalValue)) {
                        number.textContent = finalValue;
                        clearInterval(interval);
                    } else {
                        number.textContent = current + (finalValue.includes('%') ? '%' : '');
                    }
                }, 50);
            }
        });
    }, observerOptions);

    metricNumbers.forEach(number => numberObserver.observe(number));
</script>


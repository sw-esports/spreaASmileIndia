<%- include('../partials/header') %>

<main class="programs-index">
    <!-- Hero Section -->
    <section class="programs-hero">
        <div class="container">
            <div class="hero-content" data-aos="fade-up">
                <div class="hero-badge">
                    <i class="fas fa-heart"></i>
                    <span>Transforming Lives</span>
                </div>
                <h1>Our Programs</h1>
                <p class="hero-description">Comprehensive initiatives designed to break the cycle of poverty and provide street children with opportunities for education, health, and a brighter future.</p>
                <div class="hero-stats">
                    <div class="stat-item" data-aos="fade-up" data-aos-delay="100">
                        <div class="stat-number">300+</div>
                        <div class="stat-label">Children Impacted</div>
                    </div>
                    <div class="stat-item" data-aos="fade-up" data-aos-delay="200">
                        <div class="stat-number">5+</div>
                        <div class="stat-label">Core Programs</div>
                    </div>
                    <div class="stat-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="stat-number">10+</div>
                        <div class="stat-label">Years of Impact</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Programs Grid -->
    <section class="main-programs">
        <div class="container">
            <div class="section-header" data-aos="fade-up">
                <h2>Our Core Programs</h2>
                <p>Each program is designed to address specific needs and create lasting change in the lives of street children and their families.</p>
            </div>

            <div class="programs-showcase">
                <% if (typeof programs !== 'undefined' && programs && programs.length > 0) { %>
                    <% programs.forEach((program, index) => { %>
                        <div class="showcase-card" data-aos="fade-up" data-aos-delay="<%= (index + 1) * 100 %>">
                            <div class="card-image">
                                <img src="<%= program.image.url %>" alt="<%= program.image.alt || program.title %>" loading="lazy">
                            </div>
                            <div class="card-content">
                                <div class="card-category">
                                    <i class="<%= program.icon %>"></i>
                                    <span><%= program.category.charAt(0).toUpperCase() + program.category.slice(1) %></span>
                                </div>
                                <h3><%= program.title %></h3>
                                <p><%= program.shortDescription %></p>
                                <div class="card-highlights">
                                    <% program.highlights.forEach(highlight => { %>
                                        <div class="highlight">
                                            <i class="fas fa-check-circle"></i>
                                            <span><%= highlight %></span>
                                        </div>
                                    <% }); %>
                                </div>
                                <% if (program.stats && program.stats.length > 0) { %>
                                    <div class="card-info-badges">
                                        <% program.stats.forEach(stat => { %>
                                            <span class="info-badge">
                                                <i class="<%= stat.icon %>"></i> 
                                                <%= stat.value %> <%= stat.label %>
                                            </span>
                                        <% }); %>
                                    </div>
                                <% } %>
                                <a href="<%= program.pageUrl %>" class="btn-card">
                                    <span>Explore Program</span>
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="empty-message">
                        <i class="fas fa-info-circle"></i>
                        <p>No programs available at the moment. Please check back later.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Weekly Schedule -->
    <section class="weekly-schedule">
        <div class="container">
            <div class="section-header" data-aos="fade-up">
                <div class="section-badge">
                    <i class="fas fa-calendar-week"></i>
                    <span>Regular Activities</span>
                </div>
                <h2>Our Weekly Rhythm</h2>
                <p>Consistent, structured programs that create stability and routine in children's lives</p>
            </div>

            <div class="schedule-grid">
                <div class="schedule-card" data-aos="fade-right" data-aos-delay="100">
                    <div class="schedule-day">
                        <div class="day-badge">Daily</div>
                        <div class="day-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                    </div>
                    <div class="schedule-content">
                        <h3>Academic Classes</h3>
                        <p>Structured learning sessions from 3rd to 12th grade, plus computer training and skill development courses</p>
                        <div class="schedule-time">
                            <i class="fas fa-clock"></i>
                            <span>9 AM - 6 PM</span>
                        </div>
                    </div>
                </div>

                <div class="schedule-card" data-aos="fade-right" data-aos-delay="200">
                    <div class="schedule-day">
                        <div class="day-badge thursday">Thursday</div>
                        <div class="day-icon">
                            <i class="fas fa-hands-helping"></i>
                        </div>
                    </div>
                    <div class="schedule-content">
                        <h3>Langar Day</h3>
                        <p>Traditional community kitchen with volunteers preparing meals, games, and interactive learning sessions</p>
                        <div class="schedule-time">
                            <i class="fas fa-clock"></i>
                            <span>12 PM - 3 PM</span>
                        </div>
                    </div>
                </div>

                <div class="schedule-card" data-aos="fade-right" data-aos-delay="300">
                    <div class="schedule-day">
                        <div class="day-badge monthly">Monthly</div>
                        <div class="day-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div class="schedule-content">
                        <h3>Community Meetings</h3>
                        <p>Parent-teacher meetings, progress reviews, and distribution of educational materials and supplies</p>
                        <div class="schedule-time">
                            <i class="fas fa-calendar-check"></i>
                            <span>Last Saturday</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="programs-cta">
        <div class="container">
            <div class="cta-content" data-aos="zoom-in">
                <div class="cta-icon">
                    <i class="fas fa-hands-helping"></i>
                </div>
                <h2>Join Us in Making a Difference</h2>
                <p>Every child deserves a chance at education and a better future. Your support can transform lives.</p>
                <div class="cta-buttons">
                    <a href="/get-involved/donate" class="btn-cta primary">
                        <i class="fas fa-heart"></i>
                        <span>Support Our Programs</span>
                    </a>
                    <a href="/get-involved/volunteer" class="btn-cta secondary">
                        <i class="fas fa-user-plus"></i>
                        <span>Become a Volunteer</span>
                    </a>
                    <a href="/contact" class="btn-cta outline">
                        <i class="fas fa-envelope"></i>
                        <span>Get in Touch</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    /* Theme Variables */
    :root {
        --bg-primary: #ffffff;
        --bg-secondary: #fff9f5;
        --text-primary: #1a1a1a;
        --text-secondary: #666;
        --border-color: #f0f0f0;
        --card-bg: #ffffff;
    }

    [data-theme="dark"] {
        --bg-primary: #1a1a1a;
        --bg-secondary: #2d2d2d;
        --text-primary: #f7fafc;
        --text-secondary: #cbd5e0;
        --border-color: #4a5568;
        --card-bg: #2d2d2d;
    }

    [data-theme="dark"] .programs-hero {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 50%, #2d2d2d 100%);
    }

    [data-theme="dark"] .programs-hero::before {
        background: 
            radial-gradient(circle at 20% 50%, rgba(247, 148, 29, 0.15) 0%, transparent 50%),
            radial-gradient(circle at 80% 80%, rgba(237, 28, 36, 0.15) 0%, transparent 50%);
    }

    [data-theme="dark"] .main-programs {
        background: #1a1a1a;
    }

    [data-theme="dark"] .weekly-schedule {
        background: linear-gradient(135deg, #2d2d2d 0%, #1f1f1f 50%, #2d2d2d 100%);
    }

    [data-theme="dark"] .cta-section {
        background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
    }

    /* Hero Section */
    .programs-hero {
        background: linear-gradient(135deg, #fff5ed 0%, #ffe9d9 50%, #fff0e6 100%);
        padding: 100px 0 80px;
        color: var(--text-primary);
        position: relative;
        overflow: hidden;
        border-bottom: 3px solid #F7941D;
    }

    .programs-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 50%, rgba(247, 148, 29, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 80%, rgba(237, 28, 36, 0.1) 0%, transparent 50%);
        opacity: 0.6;
    }

    .hero-content {
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        color: white;
        padding: 8px 20px;
        border-radius: 50px;
        border: 1px solid rgba(247, 148, 29, 0.3);
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .programs-hero h1 {
        font-size: clamp(3rem, 6vw, 4.5rem);
        font-weight: 800;
        margin-bottom: 20px;
        line-height: 1.1;
        color: var(--text-primary);
    }

    .hero-description {
        font-size: 1.25rem;
        max-width: 700px;
        margin: 0 auto 40px;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .hero-stats {
        display: flex;
        gap: 60px;
        justify-content: center;
        margin-top: 40px;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 800;
        display: block;
        margin-bottom: 8px;
        background: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-label {
        font-size: 1rem;
        color: var(--text-secondary);
    }

    /* Main Programs */
    .main-programs {
        padding: 80px 0;
        background: #ffffff;
    }

    .section-header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 60px;
    }

    .section-header h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 16px;
        color: var(--text-primary);
    }

    .section-header p {
        font-size: 1.1rem;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .programs-showcase {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .showcase-card {
        background: var(--card-bg);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
        display: flex;
        flex-direction: column;
    }

    .showcase-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
    }

    .card-image {
        position: relative;
        height: 220px;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .showcase-card:hover .card-image img {
        transform: scale(1.05);
    }

    .featured-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255, 255, 255, 0.95);
        color: #F7941D;
        padding: 8px 16px;
        border-radius: 50px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-content {
        padding: 30px;
    }

    .card-category {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background: rgba(139, 92, 246, 0.1);
        color: #8b5cf6;
        padding: 6px 14px;
        border-radius: 50px;
        font-size: 13px;
        font-weight: 600;
        margin-bottom: 16px;
        border: 1px solid rgba(139, 92, 246, 0.2);
    }

    .card-content h3 {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 12px;
        color: var(--text-primary);
    }

    .card-content > p {
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .card-highlights {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 20px;
    }

    .highlight {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
        color: var(--text-secondary);
    }

    .highlight i {
        color: #10b981;
        font-size: 16px;
    }

    .card-info-badges {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .info-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        background: linear-gradient(135deg, rgba(247, 148, 29, 0.1) 0%, rgba(237, 28, 36, 0.1) 100%);
        color: #F7941D;
        border-radius: 50px;
        font-size: 13px;
        font-weight: 600;
        border: 1px solid rgba(247, 148, 29, 0.2);
    }

    .info-badge i {
        font-size: 12px;
    }

    .btn-card {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        color: white;
        padding: 14px 28px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-card:hover {
        transform: translateX(5px);
        box-shadow: 0 4px 16px rgba(247, 148, 29, 0.3);
    }

    /* Weekly Schedule */
    .weekly-schedule {
        padding: 80px 0;
        background: linear-gradient(135deg, #fef3f2 0%, #fff8f5 50%, #fef5f1 100%);
    }

    .section-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(139, 92, 246, 0.1);
        color: #8b5cf6;
        padding: 8px 20px;
        border-radius: 50px;
        border: 1px solid rgba(139, 92, 246, 0.2);
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 16px;
    }

    .schedule-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-top: 40px;
    }

    .schedule-card {
        background: var(--card-bg);
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

    .schedule-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    }

    .schedule-day {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 20px;
    }

    .day-badge {
        background: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        color: white;
        padding: 6px 16px;
        border-radius: 50px;
        font-size: 13px;
        font-weight: 700;
        text-transform: uppercase;
    }

    .day-badge.thursday {
        background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
    }

    .day-badge.monthly {
        background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
    }

    .day-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, rgba(247, 148, 29, 0.1) 0%, rgba(237, 28, 36, 0.1) 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: #F7941D;
    }

    .schedule-content h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 12px;
        color: var(--text-primary);
    }

    .schedule-content p {
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 16px;
    }

    .schedule-time {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #8b5cf6;
        font-weight: 600;
        font-size: 14px;
    }

    /* CTA Section */
    .programs-cta {
        padding: 80px 0;
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        color: white;
    }

    .cta-content {
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
    }

    .cta-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        margin: 0 auto 30px;
    }

    .cta-content h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 16px;
    }

    .cta-content > p {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 40px;
    }

    .cta-buttons {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-cta {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 16px 32px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .btn-cta.primary {
        background: linear-gradient(135deg, #F7941D 0%, #ED1C24 100%);
        color: white;
    }

    .btn-cta.primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 24px rgba(247, 148, 29, 0.4);
    }

    .btn-cta.secondary {
        background: #8b5cf6;
        color: white;
    }

    .btn-cta.secondary:hover {
        background: #7c3aed;
        transform: translateY(-3px);
        box-shadow: 0 8px 24px rgba(139, 92, 246, 0.4);
    }

    .btn-cta.outline {
        background: transparent;
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

    .btn-cta.outline:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: white;
        transform: translateY(-3px);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .programs-hero {
            padding: 60px 0 50px;
        }

        .programs-hero h1 {
            font-size: 2.5rem;
        }

        .hero-stats {
            flex-direction: column;
            gap: 30px;
        }

        .section-header h2 {
            font-size: 2rem;
        }

        .cta-buttons {
            flex-direction: column;
        }

        .btn-cta {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 600,
        easing: 'ease-out-cubic',
        once: true,
        offset: 50
    });

    // Image loading fallback
    document.querySelectorAll('img').forEach(img => {
        img.addEventListener('error', function() {
            this.src = 'https://images.unsplash.com/photo-1503676260728-1c00da094a0b?w=600&h=400&fit=crop';
        });
    });
</script>


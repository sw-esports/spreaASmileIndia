<%- include('../partials/header') %>

<main class="programs-index">
    <!-- Hero Section -->
    <section class="programs-hero">
        <div class="container">
            <div class="hero-content" data-aos="fade-up">
                <div class="hero-badge">
                    <i class="fas fa-heart"></i>
                    <span>Transforming Lives</span>
                </div>
                <h1>Our Programs</h1>
                <p class="hero-description">Comprehensive initiatives designed to break the cycle of poverty and provide street children with opportunities for education, health, and a brighter future.</p>
                <div class="hero-stats">
                    <div class="stat-item" data-aos="fade-up" data-aos-delay="100">
                        <div class="stat-number">300+</div>
                        <div class="stat-label">Children Impacted</div>
                    </div>
                    <div class="stat-item" data-aos="fade-up" data-aos-delay="200">
                        <div class="stat-number">5+</div>
                        <div class="stat-label">Core Programs</div>
                    </div>
                    <div class="stat-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="stat-number">10+</div>
                        <div class="stat-label">Years of Impact</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Programs Grid -->
    <section class="main-programs">
        <div class="container">
            <div class="section-header" data-aos="fade-up">
                <h2>Our Core Programs</h2>
                <p>Each program is designed to address specific needs and create lasting change in the lives of street children and their families.</p>
            </div>

            <div class="programs-showcase">
                <!-- Education Program -->
                <div class="showcase-card" data-aos="fade-up" data-aos-delay="100">
                    <div class="card-image">
                        <img src="https://images.unsplash.com/photo-1503676260728-1c00da094a0b?w=800&h=500&fit=crop" alt="Education Support" loading="lazy">
                    </div>
                    <div class="card-content">
                        <div class="card-category">
                            <i class="fas fa-book"></i>
                            <span>Education & Skills</span>
                        </div>
                        <h3>Education Support</h3>
                        <p>Helping street children transition from begging to learning through mainstream school enrollment, academic support, and skill development programs.</p>
                        <div class="card-highlights">
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>School Admission Assistance</span>
                            </div>
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Academic Programs (3rd-12th Grade)</span>
                            </div>
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Computer & Skill Training</span>
                            </div>
                        </div>
                        <div class="card-info-badges">
                            <span class="info-badge"><i class="fas fa-users"></i> 170+ Students</span>
                            <span class="info-badge"><i class="fas fa-chart-line"></i> 85% Retention</span>
                        </div>
                        <a href="/programs/education" class="btn-card">
                            <span>Explore Program</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <!-- Health & Wellness -->
                <div class="showcase-card" data-aos="fade-up" data-aos-delay="200">
                    <div class="card-image">
                        <img src="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=600&h=400&fit=crop" alt="Health & Wellness" loading="lazy">
                    </div>
                    <div class="card-content">
                        <div class="card-category">
                            <i class="fas fa-stethoscope"></i>
                            <span>Healthcare</span>
                        </div>
                        <h3>Health & Wellness</h3>
                        <p>Comprehensive healthcare services including regular check-ups, dental care, and wellness programs for holistic development.</p>
                        <div class="card-highlights">
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Monthly Health Camps</span>
                            </div>
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Dental Check-ups</span>
                            </div>
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Preventive Care</span>
                            </div>
                        </div>
                        <div class="card-info-badges">
                            <span class="info-badge"><i class="fas fa-heartbeat"></i> 180+ Tests</span>
                            <span class="info-badge"><i class="fas fa-procedures"></i> 54 ECGs</span>
                        </div>
                        <a href="/programs/health" class="btn-card">
                            <span>Explore Program</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <!-- Nutrition -->
                <div class="showcase-card" data-aos="fade-up" data-aos-delay="300">
                    <div class="card-image">
                        <img src="https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=600&h=400&fit=crop" alt="Food & Nutrition" loading="lazy">
                    </div>
                    <div class="card-content">
                        <div class="card-category">
                            <i class="fas fa-utensils"></i>
                            <span>Nutrition</span>
                        </div>
                        <h3>Food & Nutrition</h3>
                        <p>Daily nutritious meals and emergency food support ensuring no child goes hungry while focusing on their education.</p>
                        <div class="card-highlights">
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Daily Meal Programs</span>
                            </div>
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Thursday Langar Day</span>
                            </div>
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Emergency Food Relief</span>
                            </div>
                        </div>
                        <div class="card-info-badges">
                            <span class="info-badge"><i class="fas fa-users-cog"></i> 600+ Families</span>
                            <span class="info-badge"><i class="fas fa-utensils"></i> Daily Meals</span>
                        </div>
                        <a href="/programs/nutrition" class="btn-card">
                            <span>Explore Program</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <!-- Events -->
                <div class="showcase-card" data-aos="fade-up" data-aos-delay="400">
                    <div class="card-image">
                        <img src="https://images.unsplash.com/photo-1511632765486-a01980e01a18?w=600&h=400&fit=crop" alt="Special Events" loading="lazy">
                    </div>
                    <div class="card-content">
                        <div class="card-category">
                            <i class="fas fa-party-horn"></i>
                            <span>Events & Celebrations</span>
                        </div>
                        <h3>Special Events</h3>
                        <p>Community celebrations, cultural programs, and awareness campaigns that bring joy and foster social development.</p>
                        <div class="card-highlights">
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Festival Celebrations</span>
                            </div>
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Children's Day Programs</span>
                            </div>
                            <div class="highlight">
                                <i class="fas fa-check-circle"></i>
                                <span>Cultural Activities</span>
                            </div>
                        </div>
                        <div class="card-info-badges">
                            <span class="info-badge"><i class="fas fa-calendar-check"></i> 12+ Events</span>
                            <span class="info-badge"><i class="fas fa-child"></i> 300+ Kids</span>
                        </div>
                        <a href="/programs/events" class="btn-card">
                            <span>Explore Program</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Weekly Schedule -->
    <section class="weekly-schedule">
        <div class="container">
            <div class="section-header" data-aos="fade-up">
                <div class="section-badge">
                    <i class="fas fa-calendar-week"></i>
                    <span>Regular Activities</span>
                </div>
                <h2>Our Weekly Rhythm</h2>
                <p>Consistent, structured programs that create stability and routine in children's lives</p>
            </div>

            <div class="schedule-grid">
                <div class="schedule-card" data-aos="fade-right" data-aos-delay="100">
                    <div class="schedule-day">
                        <div class="day-badge">Daily</div>
                        <div class="day-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                    </div>
                    <div class="schedule-content">
                        <h3>Academic Classes</h3>
                        <p>Structured learning sessions from 3rd to 12th grade, plus computer training and skill development courses</p>
                        <div class="schedule-time">
                            <i class="fas fa-clock"></i>
                            <span>9 AM - 6 PM</span>
                        </div>
                    </div>
                </div>

                <div class="schedule-card" data-aos="fade-right" data-aos-delay="200">
                    <div class="schedule-day">
                        <div class="day-badge thursday">Thursday</div>
                        <div class="day-icon">
                            <i class="fas fa-hands-helping"></i>
                        </div>
                    </div>
                    <div class="schedule-content">
                        <h3>Langar Day</h3>
                        <p>Traditional community kitchen with volunteers preparing meals, games, and interactive learning sessions</p>
                        <div class="schedule-time">
                            <i class="fas fa-clock"></i>
                            <span>12 PM - 3 PM</span>
                        </div>
                    </div>
                </div>

                <div class="schedule-card" data-aos="fade-right" data-aos-delay="300">
                    <div class="schedule-day">
                        <div class="day-badge monthly">Monthly</div>
                        <div class="day-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div class="schedule-content">
                        <h3>Community Meetings</h3>
                        <p>Parent-teacher meetings, progress reviews, and distribution of educational materials and supplies</p>
                        <div class="schedule-time">
                            <i class="fas fa-calendar-check"></i>
                            <span>Last Saturday</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="programs-cta">
        <div class="container">
            <div class="cta-content" data-aos="zoom-in">
                <div class="cta-icon">
                    <i class="fas fa-hands-helping"></i>
                </div>
                <h2>Join Us in Making a Difference</h2>
                <p>Every child deserves a chance at education and a better future. Your support can transform lives.</p>
                <div class="cta-buttons">
                    <a href="/get-involved/donate" class="btn-cta primary">
                        <i class="fas fa-heart"></i>
                        <span>Support Our Programs</span>
                    </a>
                    <a href="/get-involved/volunteer" class="btn-cta secondary">
                        <i class="fas fa-user-plus"></i>
                        <span>Become a Volunteer</span>
                    </a>
                    <a href="/contact" class="btn-cta outline">
                        <i class="fas fa-envelope"></i>
                        <span>Get in Touch</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>


    <!-- Application Process Section -->
    <section class="application-process-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">How to Apply</h2>
                <p class="section-description">Simple steps to join our team</p>
            </div>
            
            <div class="process-steps">
                <div class="process-step" data-aos="fade-right">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h3>Submit Application</h3>
                        <p>Send your resume and cover letter explaining your motivation to work with us</p>
                        <div class="step-details">
                            <span>Resume + Cover Letter</span>
                            <span>Email: careers@spreadasmileindia.org</span>
                        </div>
                    </div>
                </div>

                <div class="process-step" data-aos="fade-left">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h3>Initial Screening</h3>
                        <p>Our team will review your application and conduct a preliminary phone or video interview</p>
                        <div class="step-details">
                            <span>Phone/Video Interview</span>
                            <span>45-60 minutes</span>
                        </div>
                    </div>
                </div>

                <div class="process-step" data-aos="fade-right">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h3>Center Visit</h3>
                        <p>Visit our Munirka center to meet the team, understand our work, and interact with children</p>
                        <div class="step-details">
                            <span>On-site Visit</span>
                            <span>2-3 hours</span>
                        </div>
                    </div>
                </div>

                <div class="process-step" data-aos="fade-left">
                    <div class="step-number">4</div>
                    <div class="step-content">
                        <h3>Final Interview</h3>
                        <p>Meet with senior team members for detailed discussion about the role and expectations</p>
                        <div class="step-details">
                            <span>In-person Interview</span>
                            <span>60-90 minutes</span>
                        </div>
                    </div>
                </div>

                <div class="process-step" data-aos="fade-right">
                    <div class="step-number">5</div>
                    <div class="step-content">
                        <h3>Welcome Aboard</h3>
                        <p>Complete documentation, orientation, and begin your journey with us</p>
                        <div class="step-details">
                            <span>Orientation Program</span>
                            <span>1 week</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Application Form Section -->
    <section class="application-form-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Apply Now</h2>
                <p class="section-description">Fill out this form to start your application process</p>
            </div>
            
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <form class="application-form" action="/api/job-application" method="POST" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="applicantName">Full Name *</label>
                                <input type="text" id="applicantName" name="applicantName" required>
                            </div>
                            <div class="form-group">
                                <label for="applicantEmail">Email Address *</label>
                                <input type="email" id="applicantEmail" name="applicantEmail" required>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="applicantPhone">Phone Number *</label>
                                <input type="tel" id="applicantPhone" name="applicantPhone" required>
                            </div>
                            <div class="form-group">
                                <label for="positionApplied">Position Applied For *</label>
                                <select id="positionApplied" name="positionApplied" required>
                                    <option value="">Select Position</option>
                                    <option value="program-coordinator">Program Coordinator</option>
                                    <option value="communications-specialist">Communications Specialist</option>
                                    <option value="finance-officer">Finance & Administration Officer</option>
                                    <option value="education-intern">Education Program Intern</option>
                                    <option value="content-intern">Content Creation Intern</option>
                                    <option value="research-intern">Research & Evaluation Intern</option>
                                    <option value="outreach-intern">Community Outreach Intern</option>
                                    <option value="other">Other (specify in cover letter)</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="education">Highest Qualification *</label>
                                <input type="text" id="education" name="education" placeholder="e.g., Master's in Social Work" required>
                            </div>
                            <div class="form-group">
                                <label for="experience">Years of Experience</label>
                                <select id="experience" name="experience">
                                    <option value="0">Fresh Graduate</option>
                                    <option value="1">1-2 years</option>
                                    <option value="3">3-5 years</option>
                                    <option value="6">6-10 years</option>
                                    <option value="10+">10+ years</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="currentOrganization">Current/Previous Organization</label>
                            <input type="text" id="currentOrganization" name="currentOrganization">
                        </div>
                        
                        <div class="form-group">
                            <label for="motivation">Why do you want to work with Spread A Smile India? *</label>
                            <textarea id="motivation" name="motivation" rows="4" required></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="skills">Relevant Skills & Experience</label>
                            <textarea id="skills" name="skills" rows="3" placeholder="Mention any relevant skills, experience with children, social work, etc."></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="availability">When can you start? *</label>
                            <select id="availability" name="availability" required>
                                <option value="">Select timeframe</option>
                                <option value="immediately">Immediately</option>
                                <option value="2-weeks">Within 2 weeks</option>
                                <option value="1-month">Within 1 month</option>
                                <option value="2-months">Within 2 months</option>
                                <option value="3-months">Within 3 months</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="resume">Upload Resume *</label>
                            <input type="file" id="resume" name="resume" accept=".pdf,.doc,.docx" required>
                            <small>PDF, DOC, or DOCX format (max 5MB)</small>
                        </div>
                        
                        <div class="form-group">
                            <label for="coverLetter">Upload Cover Letter</label>
                            <input type="file" id="coverLetter" name="coverLetter" accept=".pdf,.doc,.docx">
                            <small>PDF, DOC, or DOCX format (max 5MB)</small>
                        </div>
                        
                        <div class="form-group">
                            <label class="checkbox-item">
                                <input type="checkbox" name="agreement" required>
                                <span class="checkmark"></span>
                                I agree to undergo background verification and commit to the organization's values
                            </label>
                        </div>
                        
                        <div class="form-submit">
                            <button type="submit" class="btn btn-primary btn-large">
                                <i class="fas fa-paper-plane"></i>
                                Submit Application
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


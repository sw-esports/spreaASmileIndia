            }
        });
    }, observerOptions);
    
    // Observe elements for animations
    document.querySelectorAll('.section-header, .quick-btn, .donation-card, .story-card, .feature, .fund-allocation').forEach(el => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(30px)';
        el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(el);
    });
});
</script>


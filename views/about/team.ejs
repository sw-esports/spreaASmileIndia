<%- include('../partials/header') %>

<main class="main-content">
    <!-- Team Hero Section -->
    <section class="team-hero-section" data-aos="fade-up">
        <div class="container">
            <h1 class="team-title">Meet Our <span class="text-gradient">Amazing Team</span></h1>
            <p class="team-subtitle">Dedicated individuals working together to transform lives and spread smiles across communities</p>
        </div>
    </section>

    <% if (teamByCategory.Leadership && teamByCategory.Leadership.length > 0) { %>
    <!-- Leadership Section -->
    <section class="team-section leadership-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Leadership Team</h2>
                <p class="section-description">Visionary leaders guiding our mission and strategic direction</p>
            </div>
            
            <div class="team-grid">
                <% teamByCategory.Leadership.forEach((member, index) => { %>
                <div class="team-card featured" data-aos="zoom-in" data-aos-delay="<%= index * 100 %>">
                    <div class="card-image">
                        <% if (member.profileImage && member.profileImage.url) { %>
                        <img src="<%= member.getProfileImageUrl() %>" alt="<%= member.name %>" loading="lazy">
                        <% } else { %>
                        <div class="placeholder-avatar">
                            <%= member.name.charAt(0).toUpperCase() %>
                        </div>
                        <% } %>
                        <div class="card-overlay">
                            <div class="social-links">
                                <% if (member.socialMedia && member.socialMedia.instagram) { %>
                                <a href="<%= member.socialMedia.instagram %>" target="_blank" aria-label="Instagram">
                                    <i class="fab fa-instagram"></i>
                                </a>
                                <% } %>
                                <% if (member.socialMedia && member.socialMedia.linkedin) { %>
                                <a href="<%= member.socialMedia.linkedin %>" target="_blank" aria-label="LinkedIn">
                                    <i class="fab fa-linkedin"></i>
                                </a>
                                <% } %>
                                <% if (member.socialMedia && member.socialMedia.twitter) { %>
                                <a href="<%= member.socialMedia.twitter %>" target="_blank" aria-label="Twitter">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <% } %>
                                <% if (member.socialMedia && member.socialMedia.facebook) { %>
                                <a href="<%= member.socialMedia.facebook %>" target="_blank" aria-label="Facebook">
                                    <i class="fab fa-facebook"></i>
                                </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="card-content">
                        <h3 class="member-name"><%= member.name %></h3>
                        <p class="member-role"><%= member.role %></p>
                        <p class="member-description"><%= member.bio %></p>
                        <% if (member.achievements && member.achievements.length > 0) { %>
                        <div class="member-achievements">
                            <% member.achievements.forEach(achievement => { %>
                            <span class="achievement-tag"><%= achievement %></span>
                            <% }) %>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>
    <% } %>


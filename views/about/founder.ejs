<%- include('../partials/header') %>

<main class="main-content">
    <!-- Founder Hero Section -->
    <section class="founder-hero-section" data-aos="fade-up">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="founder-content">
                        <h1 class="founder-title">Meet Our Founder</h1>
                        <h2 class="founder-name"><%= founder ? founder.name : 'Sangeeta Mehra' %></h2>
                        <p class="founder-tagline"><%= founder && founder.tagline ? founder.tagline : 'From Fashion Designer to Change Maker' %></p>
                        <% if (founder && founder.quote) { %>
                        <p class="founder-intro">
                            "<%= founder.quote %>"
                        </p>
                        <% } else { %>
                        <p class="founder-intro">
                            "I decided to lose myself in the service of others, aiming to give at-risk kids basic amenities like food, clothes and shelter and eventually mainstream them into school."
                        </p>
                        <% } %>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="founder-image" data-aos="fade-left">
                        <% if (founder && founder.profileImage && founder.profileImage.url) { %>
                        <img src="<%= founder.getProfileImageUrl({ width: 800, quality: 90 }) %>" alt="<%= founder.name %> - Founder of Spread A Smile India" loading="lazy">
                        <% } else { %>
                        <img src="/src/images/founder/sangita-mehra-1.jpg" alt="Founder of Spread A Smile India" loading="lazy">
                        <% } %>
                        <div class="founder-quote-overlay">
                            <blockquote>
                                <%= founder && founder.quote ? founder.quote : 'Every child deserves a chance to dream and achieve those dreams.' %>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Founder's Journey Section -->
    <section class="founder-journey-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">A Journey of Transformation</h2>
                <p class="section-description">How personal motivation became a movement for change</p>
            </div>
            
            <div class="journey-content">
                <% if (founder && founder.journey && founder.journey.length > 0) { %>
                    <% founder.journey.forEach((phase, index) => { %>
                    <div class="journey-item" data-aos="<%= index % 2 === 0 ? 'fade-right' : 'fade-left' %>">
                        <div class="journey-icon">
                            <i class="fas fa-<%= phase.icon || 'heart' %>"></i>
                        </div>
                        <div class="journey-details">
                            <h3><%= phase.title %></h3>
                            <p><%= phase.description %></p>
                        </div>
                    </div>
                    <% }) %>
                <% } else { %>
                <div class="journey-item" data-aos="fade-right">
                    <div class="journey-icon">
                        <i class="fas fa-palette"></i>
                    </div>
                    <div class="journey-details">
                        <h3>The Fashion Designer</h3>
                        <p>Sangeeta Mehra was a successful fashion designer and entrepreneur, running her own business and part of the renowned Mehrasons Jewellers family.</p>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Leadership Philosophy Section -->
    <section class="philosophy-section" data-aos="fade-up">
        <div class="container">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="philosophy-content">
                        <h2>Leadership Philosophy</h2>
                        <div class="philosophy-grid">
                            <% if (founder && founder.philosophy && founder.philosophy.length > 0) { %>
                                <% founder.philosophy.forEach(item => { %>
                                <div class="philosophy-item">
                                    <div class="philosophy-icon">
                                        <i class="fas fa-<%= item.icon || 'heart' %>"></i>
                                    </div>
                                    <h4><%= item.title %></h4>
                                    <p><%= item.description %></p>
                                </div>
                                <% }) %>
                            <% } else { %>
                            <div class="philosophy-item">
                                <div class="philosophy-icon">
                                    <i class="fas fa-eye"></i>
                                </div>
                                <h4>Vision</h4>
                                <p>To create a future where every child born in poverty can break the cycle of destitution through education and empowerment.</p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Recognition and Media Section -->
    <section class="recognition-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Recognition & Media</h2>
                <p class="section-description"><%= founder && founder.name ? founder.name + "'s" : "Our founder's" %> work has been recognized nationally and internationally</p>
            </div>
            
            <div class="recognition-grid">
                <% if (founder && founder.mediaFeatures && founder.mediaFeatures.length > 0) { %>
                    <% founder.mediaFeatures.forEach(feature => { %>
                    <div class="recognition-item" data-aos="zoom-in">
                        <div class="recognition-icon">
                            <i class="<%= feature.icon || 'fas fa-newspaper' %>"></i>
                        </div>
                        <h4><%= feature.title %></h4>
                        <p><%= feature.description %></p>
                        <% if (feature.link) { %>
                        <a href="<%= feature.link %>" class="recognition-link" target="_blank">View More</a>
                        <% } %>
                    </div>
                    <% }) %>
                <% } else { %>
                <div class="recognition-item" data-aos="zoom-in">
                    <div class="recognition-icon">
                        <i class="fab fa-youtube"></i>
                    </div>
                    <h4>TEDx Talk</h4>
                    <p>"Making Lemonade From Love" - TEDxCoventGardenWomen, London</p>
                </div>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Personal Message Section -->
    <section class="personal-message-section" data-aos="fade-up">
        <div class="container">
            <div class="message-content">
                <div class="message-header">
                    <h2>A Personal Message from <%= founder && founder.name ? founder.name.split(' ')[0] : 'Our Founder' %></h2>
                </div>
                <div class="message-body">
                    <blockquote class="founder-message">
                        <% if (founder && founder.personalMessage) { %>
                            <%- founder.personalMessage.replace(/\n/g, '</p><p>') %>
                        <% } else { %>
                        <p>"When I see a child who was once begging at traffic lights now sitting in a classroom, reading and writing, my heart fills with immense joy. This transformation is not just theirs - it's ours, as a society."</p>
                        <% } %>
                        
                        <cite>
                            <% if (founder && founder.profileImage && founder.profileImage.url) { %>
                            <img src="<%= founder.getProfileImageUrl({ width: 150, quality: 85 }) %>" alt="<%= founder.name %>" class="signature-img">
                            <% } else { %>
                            <img src="/src/images/founder/sangita-mehra-2.jpg" alt="Founder" class="signature-img">
                            <% } %>
                            <span class="signature-name"><%= founder ? founder.name : 'Sangeeta Mehra' %></span>
                            <span class="signature-title"><%= founder && founder.title ? founder.title : 'Founder & Director' %></span>
                        </cite>
                    </blockquote>
                </div>
            </div>
        </div>
    </section>

    <!-- Connect Section -->
    <section class="connect-section" data-aos="fade-up">
        <div class="container">
            <div class="connect-content">
                <h2>Connect with <%= founder && founder.name ? founder.name.split(' ')[0] : 'Our Founder' %></h2>
                <p>Follow our founder's journey and insights on social media</p>
                <div class="social-links">
                    <% if (founder && founder.socialMedia) { %>
                        <% if (founder.socialMedia.instagram) { %>
                        <a href="<%= founder.socialMedia.instagram %>" target="_blank" class="social-link">
                            <i class="fab fa-instagram"></i>
                            <span>Instagram</span>
                        </a>
                        <% } %>
                        <% if (founder.socialMedia.facebook) { %>
                        <a href="<%= founder.socialMedia.facebook %>" target="_blank" class="social-link">
                            <i class="fab fa-facebook"></i>
                            <span>Facebook</span>
                        </a>
                        <% } %>
                        <% if (founder.socialMedia.linkedin) { %>
                        <a href="<%= founder.socialMedia.linkedin %>" target="_blank" class="social-link">
                            <i class="fab fa-linkedin"></i>
                            <span>LinkedIn</span>
                        </a>
                        <% } %>
                        <% if (founder.socialMedia.twitter) { %>
                        <a href="<%= founder.socialMedia.twitter %>" target="_blank" class="social-link">
                            <i class="fab fa-twitter"></i>
                            <span>Twitter</span>
                        </a>
                        <% } %>
                        <% if (founder.socialMedia.youtube) { %>
                        <a href="<%= founder.socialMedia.youtube %>" target="_blank" class="social-link">
                            <i class="fab fa-youtube"></i>
                            <span>YouTube</span>
                        </a>
                        <% } %>
                    <% } else { %>
                    <a href="https://instagram.com/sangitamehra1" target="_blank" class="social-link">
                        <i class="fab fa-instagram"></i>
                        <span>@sangitamehra1</span>
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="cta-section" data-aos="fade-up">
        <div class="container">
            <div class="cta-content">
                <h2>Inspired by <%= founder && founder.name ? founder.name.split(' ')[0] + "'s" : "Our Founder's" %> Journey?</h2>
                <p>Join us in creating more transformation stories</p>
                <div class="cta-buttons">
                    <a href="/get-involved/volunteer" class="btn btn-primary">
                        <i class="fas fa-hands-helping"></i>
                        Start Volunteering
                    </a>
                    <a href="/contact" class="btn btn-secondary">
                        <i class="fas fa-envelope"></i>
                        Get in Touch
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>

<link rel="stylesheet" href="/css/founder.css">

<%- include('../partials/footer') %>
<!-- Team Card Component -->
<div class="team-card" data-aos="fade-up" data-aos-delay="<%= delay || 0 %>">
    <div class="team-image-container">
        <img src="<%= image %>" alt="<%= name %>" class="team-image" loading="lazy">
        <div class="team-overlay">
            <div class="team-social">
                <% if (social.instagram) { %>
                    <a href="<%= social.instagram %>" target="_blank" rel="noopener" aria-label="Instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                <% } %>
                <% if (social.linkedin) { %>
                    <a href="<%= social.linkedin %>" target="_blank" rel="noopener" aria-label="LinkedIn">
                        <i class="fab fa-linkedin"></i>
                    </a>
                <% } %>
                <% if (social.twitter) { %>
                    <a href="<%= social.twitter %>" target="_blank" rel="noopener" aria-label="Twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                <% } %>
                <% if (social.facebook) { %>
                    <a href="<%= social.facebook %>" target="_blank" rel="noopener" aria-label="Facebook">
                        <i class="fab fa-facebook"></i>
                    </a>
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="team-content">
        <h3 class="team-name"><%= name %></h3>
        <p class="team-role"><%= role %></p>
        <p class="team-bio"><%= bio %></p>
        
        <button class="team-btn" data-member="<%= name.toLowerCase().replace(' ', '-') %>">
            <span>Learn More</span>
            <i class="fas fa-arrow-right"></i>
        </button>
    </div>
</div>
<!-- Impact Card Component -->
<div class="impact-card impact-card-<%= color %>" data-aos="fade-up" data-aos-delay="<%= delay || 0 %>" style="background-image: url('<%= backgroundImage || './src/images/education/landscape2.webp' %>');">
    <div class="card-background-overlay"></div>
    <div class="card-content-wrapper">
        <div class="card-header">
            <div class="card-icon">
                <i class="<%= icon %>"></i>
            </div>
            <div class="card-progress">
                <svg class="progress-ring" width="50" height="50">
                    <circle class="progress-ring-bg" cx="25" cy="25" r="20"></circle>
                    <circle class="progress-ring-fill" 
                            cx="25" 
                            cy="25" 
                            r="20" 
                            data-progress="<%= progress %>"></circle>
                </svg>
                <span class="progress-text">0%</span>
            </div>
        </div>
        
        <div class="card-content">
            <div class="card-stats">
                <span class="stat-number" data-target="<%= number %>">0</span>
                <% if (suffix) { %><span class="stat-suffix"><%= suffix %></span><% } %>
            </div>
            <h3 class="card-title"><%= label %></h3>
            <p class="card-description"><%= description %></p>
        </div>
        
        <div class="card-footer">
            <div class="impact-indicator">
                <div class="indicator-dot"></div>
                <span>Making Impact</span>
            </div>
        </div>
    </div>
</div>
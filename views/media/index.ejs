<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/media.css">

<main class="main-content">
    <!-- Media Hero Section -->
    <section class="media-hero-section" data-aos="fade-up">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">Media Gallery</h1>
                <p class="hero-subtitle">Stories of transformation captured in moments</p>
                <p class="hero-description">
                    Browse through our collection of photos, videos, and press coverage that showcase 
                    the beautiful journey of children from streets to classrooms.
                </p>
            </div>
        </div>
    </section>

    <!-- Media Categories Section -->
    <section class="media-categories-section" data-aos="fade-up">
        <div class="container">
            <div class="categories-grid">
                <a href="/media/gallery" class="category-card" data-aos="zoom-in">
                    <div class="category-image">
                        <img src="/src/images/media/photo-gallery.jpg" alt="Photo Gallery" loading="lazy">
                        <div class="category-overlay">
                            <i class="fas fa-images"></i>
                        </div>
                    </div>
                    <div class="category-content">
                        <h3>Photo Gallery</h3>
                        <p>Moments of joy, learning, and transformation captured in beautiful photographs</p>
                        <div class="category-stats">
                            <span>500+ Photos</span>
                            <span>20+ Events</span>
                        </div>
                    </div>
                </a>

                <a href="/media/videos" class="category-card" data-aos="zoom-in" data-aos-delay="100">
                    <div class="category-image">
                        <img src="/src/images/media/videos.jpg" alt="Videos" loading="lazy">
                        <div class="category-overlay">
                            <i class="fas fa-video"></i>
                        </div>
                    </div>
                    <div class="category-content">
                        <h3>Videos</h3>
                        <p>Watch testimonials, program highlights, and stories of transformation</p>
                        <div class="category-stats">
                            <span>50+ Videos</span>
                            <span>Documentary Features</span>
                        </div>
                    </div>
                </a>

                <a href="/media/press" class="category-card" data-aos="zoom-in" data-aos-delay="200">
                    <div class="category-image">
                        <img src="/src/images/media/press-coverage.jpg" alt="Press Coverage" loading="lazy">
                        <div class="category-overlay">
                            <i class="fas fa-newspaper"></i>
                        </div>
                    </div>
                    <div class="category-content">
                        <h3>Press Coverage</h3>
                        <p>Media features, interviews, and recognition in national and local publications</p>
                        <div class="category-stats">
                            <span>25+ Articles</span>
                            <span>National Media</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- Featured Media Section -->
    <section class="featured-media-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Featured Content</h2>
                <p class="section-description">Highlights from our media collection</p>
            </div>
            
            <div class="featured-grid">
                <div class="featured-item video-item" data-aos="fade-up">
                    <div class="media-thumbnail">
                        <img src="/src/images/media/featured-video-1.jpg" alt="Sangita Mehra TEDx Talk" loading="lazy">
                        <div class="play-button">
                            <i class="fas fa-play"></i>
                        </div>
                        <div class="media-duration">18:45</div>
                    </div>
                    <div class="media-content">
                        <h3>TEDx Talk: Making Lemonade From Love</h3>
                        <p>Sangita Mehra shares her inspiring journey from fashion designer to child welfare advocate</p>
                        <div class="media-meta">
                            <span><i class="fas fa-eye"></i> 50K+ views</span>
                            <span><i class="fas fa-calendar"></i> TEDxCoventGardenWomen</span>
                        </div>
                    </div>
                </div>

                <div class="featured-item photo-item" data-aos="fade-up" data-aos-delay="100">
                    <div class="media-thumbnail">
                        <img src="/src/images/media/featured-photo-1.jpg" alt="Children's Day Celebration" loading="lazy">
                    </div>
                    <div class="media-content">
                        <h3>Children's Day Celebration 2024</h3>
                        <p>Joy and laughter filled our center as children performed cultural programs</p>
                        <div class="media-meta">
                            <span><i class="fas fa-images"></i> 50+ photos</span>
                            <span><i class="fas fa-calendar"></i> November 2024</span>
                        </div>
                    </div>
                </div>

                <div class="featured-item article-item" data-aos="fade-up" data-aos-delay="200">
                    <div class="media-thumbnail">
                        <img src="/src/images/media/asian-age-article.jpg" alt="Asian Age Article" loading="lazy">
                    </div>
                    <div class="media-content">
                        <h3>"Smiles of Hope" - Asian Age Feature</h3>
                        <p>Detailed profile of Sangita Mehra and Spread A Smile India's impact</p>
                        <div class="media-meta">
                            <span><i class="fas fa-newspaper"></i> Asian Age</span>
                            <span><i class="fas fa-calendar"></i> March 2016</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Social Media Feed Section -->
    <section class="social-media-section" data-aos="fade-up">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Follow Our Journey</h2>
                <p class="section-description">Stay updated with our daily activities on social media</p>
            </div>
            
            <div class="social-feed">
                <div class="social-platform">
                    <div class="platform-header">
                        <i class="fab fa-instagram"></i>
                        <h3>Instagram</h3>
                        <a href="https://instagram.com/sangitamehra1" target="_blank" class="follow-btn">
                            Follow @sangitamehra1
                        </a>
                    </div>
                    <div class="instagram-preview">
                        <div class="instagram-post">
                            <img src="/src/images/social/instagram-1.jpg" alt="Instagram post" loading="lazy">
